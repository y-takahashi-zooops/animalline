{
    "name": "animalline/project",
    "description": "EC-CUBE EC open platform.",
    "type": "project",
    "homepage": "https://www.ec-cube.net/",
    "license": [
       "GPL-2.0-only",
       "proprietary"
    ],
    "support": {
        "issues": "https://github.com/EC-CUBE/ec-cube/issues"
    },
    "minimum-stability": "stable",
    "require": {
        "php": "8.2",
        "doctrine/cache": "^2.0",
        "doctrine/common": "^3.0",
        "doctrine/dbal": "^3.4",
        "doctrine/migrations": "^3.2",
        "doctrine/orm": "^2.18",
        "ec-cube/ec-cube": "^4.3",
        "egulias/email-validator": "^4.0",
        "fakerphp/faker": "^1.20",
        "mobiledetect/mobiledetectlib": "*",
        "nesbot/carbon": "^3.0"
    },
    "require-dev": {
        "captbaritone/mailcatcher-codeception-module": "^1.2",
        "dama/doctrine-test-bundle": "^6.0",
        "fakerphp/faker": "^1.20",
        "mikey179/vfsstream": "^1.6",
        "php-coveralls/php-coveralls": "^2.1",
        "symfony/phpunit-bridge": "^3.4"
    },
    "autoload": {
        "files": [
        ],
        "psr-4": {
            "Eccube\\Entity\\": "app/proxy/entity",
            "Customize\\": "app/Customize",
            "Eccube\\": "src/Eccube",
            "Plugin\\": "app/Plugin"
        },
        "exclude-from-classmap": ["**/Test/**", "**/Tests/**", "**/test/**", "**/tests/**"]
    },
    "autoload-dev" : {
        "psr-4": {
            "Eccube\\Tests\\" : "tests/Eccube/Tests"
        }
    },
    "scripts": {
        "compile": {
            "doctrine:schema:create": "bin/console doctrine:schema:create",
            "eccube:fixtures:load": "bin/console eccube:fixtures:load"
        },
        "auto-scripts": {
            "cache:clear --no-warmup": "symfony-cmd",
            "cache:warmup --no-optional-warmers": "symfony-cmd",
            "assets:install --symlink --relative html": "symfony-cmd"
        },
        "installer-scripts": {
            "doctrine:database:create": "bin/console doctrine:database:create",
            "doctrine:schema:create": "bin/console doctrine:schema:create",
            "eccube:fixtures:load": "bin/console eccube:fixtures:load"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-create-project-cmd": [
            "@installer-scripts",
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/debug": "3.4.4",
        "symfony/symfony": "*",
        "easycorp/easy-log-handler": "1.0.4|1.0.5"
    },
    "extra": {
        "symfony": {
            "id": "01C0Q71D54BCVSB8ZWR3VECDRD",
            "allow-contrib": false
        },
        "symfony-web-dir": ".",
        "bin-dir": "bin",
        "src-dir": "src/Eccube",
        "config-dir": "app/config/eccube",
        "public-dir": "."
    },
    "config": {
        "platform": {
            "php": "8.2"
        },
        "preferred-install": {
            "*": "dist"
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "ec-cube/plugin-installer": true,
            "kylekatarnls/update-helper": true,
            "symfony/flex": true
        }
    },
    "repositories": {
        "eccube": {
            "type": "composer",
            "url": "https://package-api.ec-cube.net",
            "options": {
                "http": {
                    "header": ["X-ECCUBE-KEY: cmHgx5OO3VJFo9lY7IghpuYjxsEUGrNySRbhZ8jI"]
                }
            }
        }
    }
}
