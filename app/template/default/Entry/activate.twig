{# ヘッダーの切り替え #}
{% if prefix == "adoption" %}
    {% set base_template = 'adoption_frame.twig' %}
{% endif %}
{% if prefix == "breeder" %}
    {% set base_template = 'breeder_frame.twig' %}
{% endif %}
{% if prefix == "default" %}
    {% set base_template = 'default_frame.twig' %}
{% endif %}
{% extends base_template %}
{# ヘッダーの切り替え #}

{% set body_class = 'registration_page' %}

{% block main %}
    <div class="ec-role">
        <div class="ec-pageHeader">
            <h1>{{ '新規会員登録(完了)'|trans }}</h1>
        </div>
    </div>
    <div class="ec-registerCompleteRole">
        <div class="ec-off3Grid ec-text-ac">
            <div class="ec-off3Grid__cell">
                <div class="ec-reportHeading">
                    <h2>{{ '会員登録ありがとうございます'|trans }}</h2>
                </div>
                <p class="ec-reportDescription">{{ '会員登録が完了しました。
引き続き必要情報の登録をお願いします。
'|trans|nl2br }}</p>
                <div class="ec-off4Grid">
                    <div class="ec-off4Grid__cell">
                        {% if qtyInCart %}
                            <a class="ec-blockBtn--action" style="margin-bottom: 3px" href="{{ url('cart') }}">{{ 'カートへ進む'|trans }}</a>
                        {% endif %}
                        <a class="ec-blockBtn--cancel" href="{{ url(returnPath) }}">{{ '審査情報入力ページへ'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
