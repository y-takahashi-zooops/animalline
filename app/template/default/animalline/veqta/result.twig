{% extends 'animalline/veqta/frame.twig' %}

{% block main %}
<style type="text/css">
	label.error {
		display: inline-block;
		color:red;
		width: 200px;
	}
	</style>

<div class="center_section">
    <div class="row">
        <form id="form" name="form" action="{{ url('veqta_result') }}" method="post">
            <div class="col-12">
                <div class="row">
                    <div class="col-6">
                        検体バーコード読み込み
                    </div>
                    <div class="col-6">
                        <input type="text" class="w-100" id="barCode" name="barCode" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        検体送付者名
                    </div>
                    <div class="col-6">
                        鈴木　太郎様
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        検査結果
                    </div>
                    <div class="col-6">
                        <select>
                            <option value="A">選択してください</option>
                            <option value="B">検体異常</option>
                            <option value="B">クリア</option>
                            <option value="B">キャリア</option>
                            <option value="B">アフェクテッド</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        検査結果PDF
                    </div>
                    <div class="col-6">
                        <input type="file" accept=".pdf">(*.pdf)</input>
                    </div>
                </div>

                <div class="col-12">
                    <button class="btn btn-warning w-100 m-1" id="resultRegistration" type="submit">検査結果登録</button>
                </div>
                <div class="col-12">
                    <a href="{{url('veqta_index')}}" class="btn btn-warning w-100 m-1">戻る</a>
                </div>
            </div>
        </form>
        
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
$(document).ready(function() {
    $("#form").validate({
        rules: {
            barCode: {
                required: true,
                minlength: 6,
                maxlength: 6
            }
        },
        messages: {
            barCode: {
                required: "サンプルバーコードを入力してください",
                minlength: "サンプルバーコードは6文字である必要があります",
                maxlength: "サンプルバーコードは6文字である必要があります"
            }
        },
        submitHandler: function(form) {
            form.submit();
        }
    });
});
</script>
{% endblock %}