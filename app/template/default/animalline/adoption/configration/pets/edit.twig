{% set site_type = 'adoption' %}
{% extends 'ani_frame.twig' %}
{% block main %}
    <h1>Edit AdoptionPets</h1>
    <br>
    <a href="{{ path('adoption_configration') }}">< back to list</a>
    <hr>
    {{ include('animalline/adoption/configration/pets/_form.twig', {'button_label': 'Update'}) }}
{% endblock %}

{% block javascript %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> {# current jquery slim not support ajax #}
<script src="{{ asset('assets/js/conservation_pets.js') }}"></script>
<script>
    var thumbnailPath = '{{ adoption_pet.thumbnailPath }}';
    var petImages = {{ pet_mages | json_encode | raw }};
    $(document).ready(function() {
        if (thumbnailPath) {
            $('#conservation_pets_thumbnail_path').hide();
            $('#conservation_pets_thumbnail_path').parent().find('img').attr('src', thumbnailPath);
            $('#conservation_pets_thumbnail_path').parent().find('img').show();
            $('#conservation_pets_thumbnail_path').parent().parent().find('button').show();
            $(`input.conservation_pets_thumbnail_path`).val(thumbnailPath);
        }
        petImages.forEach((p) => {
            if (p.image_uri.length > 0) {
                setImageToBox(p.image_uri, p.sort_order - 1)
            }
        });
    });
    var inputImageId = '';
    var bs_modal = $('#modal');
    var image = document.getElementById('image');
    var cropper, reader, file, size;
    function setImageToBox(image, key) {
        const id = 'conservation_pets_image' + key;
        $(`#${ id }`).hide();
        $(`#${ id }`).parent().find('img').attr('src', image);
        $(`#${ id }`).parent().find('img').show();
        $(`#${ id }`).parent().parent().find('button').show();
        $(`input.${ id }`).val(image);
    }
    $(".form-control-file").change(function (e) {
        inputImageId = e.target.id;
        var files = e.target.files;
        var done = function (url) {
            image.src = url;
            bs_modal.modal('show');
        };

        if (files && files.length > 0) {
            file = files[0];

            if (URL) {
                done(URL.createObjectURL(file));
            } else if (FileReader) {
                reader = new FileReader();
                reader.onload = function (e) {
                    done(reader.result);
                };
                reader.readAsDataURL(file);
            }
        }
    });

    bs_modal.on('shown.bs.modal', function () {
        cropper = new Cropper(image, {
            aspectRatio: 1,
            viewMode: 2,
            preview: '.preview',
            dragMode: 'none',
            background: false,
        });
    }).on('hidden.bs.modal', function () {
        cropper.destroy();
        cropper = null;
        $(`#${ inputImageId }`).val('');
    });

    $("#crop").click(function () {
        size = cropper.imageData.naturalHeight < cropper.imageData.naturalWidth ? cropper.imageData.naturalHeight : cropper.imageData.naturalWidth;
        size = size < 1000 ? size : 1000;
        canvas = cropper.getCroppedCanvas({
            width: size,
            height: size,
        });

        canvas.toBlob(function (blob) {
            url = URL.createObjectURL(blob);
            var reader = new FileReader();
            reader.readAsDataURL(blob);
            reader.onloadend = function () {
                var base64data = reader.result;
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    url: "/adoption/configration/pets/upload",
                    data: {image: base64data},
                    success: function (data) {
                        bs_modal.modal('hide');
                        $(`#${ inputImageId }`).hide();
                        $(`#${ inputImageId }`).parent().find('.img_preview').attr('src', '/' + data)
                        $(`#${ inputImageId }`).parent().find('.img_preview').show();
                        $(`#${ inputImageId }`).parent().parent().find('.btn_remove').show();
                        $(`#${ inputImageId }`).parent().parent().find('.btn_set_thumbnail').show();
                        $(`input.${ inputImageId }`).val('/' + data);
                    }
                });
            };
        });
    });

    $(document).on('click', '.btn_remove', function(e) {
        e.preventDefault();
        $(this).hide();
        $(this).parent().find('.btn_set_thumbnail').hide();
        $(this).parent().parent().find('.img_preview').hide();
        $(this).parent().parent().find('.form-control-file').show();
        $(`input.${ e.target.classList[1] }`).val('');
    });

    $(document).on('click', '.btn_set_thumbnail', function(e) {
        e.preventDefault();
        const src = $(this).parent().parent().find('.img_preview').prop('src');
        $('#img_thumbnail').attr('src', src);
        $('#conservation_pets_thumbnail_path').hide();
        $('#img_thumbnail').show();
        $('#img_thumbnail').parent().parent().find('.btn_remove').show();
        $(`input.conservation_pets_thumbnail_path`).val($(`input.${ e.target.classList[1] }`).val());
    });
</script>
{% endblock %}
