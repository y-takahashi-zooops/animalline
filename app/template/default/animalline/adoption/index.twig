                <div class="breeder-column__main_section_title_btn">
                  <a href="{{ url('adoption_pet_search_result', {'pet_kind': petKind, 'featured_pet': 1}) }}"><i class="bi bi-list"></i>一覧へ</a>
                </div>
              </div>
              <div class="breeder-column__main_section_body">
                <ul>
                  {% for pet in favoritePets %}
                    <li>
                      <a href="{{ url('adoption_pet_detail', {'id': pet.id}) }}">
                        <!--
                        <div class="tags">
                        <ul>
                            <li class="tag_new"><span>New</span></li>
