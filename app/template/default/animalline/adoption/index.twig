                            <figure><img src="{{ asset('assets/img/breeder-dog-fat03.png') }}" alt="中型犬"/></figure>
                            <p>中型犬</p>
                            </a>
                        </li>
                        <li>
                            <a href="{{ url('adoption_pet_search_result', {'pet_kind': constant('Customize\\Config\\AnilineConf::ANILINE_PET_KIND_DOG'),
                                        'size_code' : constant('Customize\\Config\\AnilineConf::ANILINE_DOG_SIZE_BIG')}) }}">
