        <div class="breeder-column-row">
          <div class="breeder-column__main">
            <div class="breeder-column__main_section" id="breeder-column__main_section_dog_new">
            <div class="breeder-column__main_section_title" style="display: none">
              <h3>新着のペット</h3>
              <div class="breeder-column__main_section_title_btn">
                <a href="{{ url('adoption_pet_search_result', {'pet_kind': petKind, 'new_pet': 1}) }}"><i class="bi bi-list"></i>一覧へ</a>
              </div>
            </div>
              <div class="breeder-column__main_section_body">
                <ul>
                  {% for pet in newPets %}
                    <li>
                      <a href="{{ url('adoption_pet_detail', {'id': pet.id}) }}">
