{% set site_type = 'adoption' %}
{% extends 'animalline/adoption/frame.twig' %}

{% block main %}
    <div class="page-inner">
        <div class="mypage-service_list">
            <div class="mypage-service_list__content">
                <div class="mypage-service_list__content_body">
                    <ul>
                        {% for pet in pets %}
                            <li>
                                <a href="">
                                    <div class="image">
                                        <figure>
                                            <img src="{{ '/' ~ constant('Customize\\Config\\AnilineConf::ANILINE_IMAGE_URL_BASE') ~ (pet[0].thumbnailPath | default('/noimage_plugin_list.png')) }}"
                                                 alt="犬"/>
                                        </figure>
                                        <div class="image-icon">
                                            {% if pet[0].petSex == constant('Customize\\Config\\AnilineConf::ANILINE_PET_SEX_MALE') %}
                                                <span class="image-icon_female">男の子</span>
                                            {% else %}
                                                <span class="image-icon_male">女の子</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="text">
                                        <div class="status">
                                            {% if pet['contract_status'] == constant('Customize\\Config\\AnilineConf::CONTRACT_STATUS_CONTRACT') %}
                                                <span class="status-gray">売約済み</span>
                                            {% else %}
                                                <span class="status-green">販売中</span>
                                            {% endif %}
                                        </div>
                                        <div class="name">
                                            <h3>{{ pet[0].BreedsType.breedsName ?? '' }}</h3>
                                        </div>
                                        <div class="profile">
                                            <ul>
                                                <li>{{ pet[0].petBirthday|date('Y年m月d日') }}生まれ</li>
                                                <li>{{ pet[0].Conservation.ownerName ?? '' }}</li>
                                            </ul>
                                        </div>
                                        <div class="price">
                                            <p>{{ pet[0].price }}円</p>
                                        </div>
                                        <div class="locale">
                                            <p>{{ pet['pref'] ? pet['pref'].conservationHousePref : '' }}</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                            {% if pet[0].Conservation.id != user.id %}
                                {% if pet['contract_status'] is null  or pet['contract_status'] == constant('Customize\\Config\\AnilineConf::CONTRACT_STATUS_NONCONTRACT') %}
                                    <div class="col-6 btn_center">
                                        <div class="row">
                                            <div class="col-12 contents_col_normal">
                                                <a href="{{ url('adoption_contact', {'pet_id': pet[0].id}) }}">
                                                    <button class="btn basic-btn adoption-btn" style="height:65px;">
                                                        この子犬の見学希望／お問い合わせ(無料)
                                                    </button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="col-6 btn_center contracted">
                                        <div class="row">
                                            <div class="col-12 contents_col_normal">
                                                <a href="{{ url('adoption_all_message') }}">
                                                    <button class="btn basic-btn" style="height:65px;">
                                                        問い合わせ済み／取引メッセージを見る
                                                    </button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endif %}
                        {% else %}
                            <span class="mb-2">結果が０件です。</span>
                        {% endfor %}
                </div>
                </ul>
                <div class="navigation">
                    {{ knp_pagination_render(pets) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/adoption-style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/mypage.css') }}">
    <style>
        .contracted button {
            border: 1px solid #549B35;
            color: #549B35;
        }

        .contracted:hover button {
            color: #549B35;
        }
    </style>
{% endblock %}
{% block javascript %}{% endblock %}