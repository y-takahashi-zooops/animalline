{% set site_type = 'adoption' %}
{% extends 'animalline/adoption/frame.twig' %}

{% block main %}
    <div class="ec-role">
        <div class="ec-pageHeader">
            <h1>お問い合わせ完了</h1>
        </div>
    </div>
    <div class="ec-registerCompleteRole">
        <div class="ec-offGrid ec-text-ac">
            <div class="ec-offGrid__cell">
                <div class="ec-reportHeading">
                    <h2>
                        お問い合わせの内容を送信しました<br/>
                        保護団体からの返信があるまでお待ちください<br/>
                    </h2>
                </div>
                <div class="m-2 p-2"></div>
                <div class="ec-off2Grid">
                    <div class="ec-off2Grid__cell">
                        <a class="ec-blockBtn--action bg-adoption mb-4" href={{ url('adoption_pet_detail', {id: id}) }}>
                            {{ 'ペット詳細へ戻ります'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/adoption-style.css') }}">
{% endblock %}
{% block javascript %}{% endblock %}