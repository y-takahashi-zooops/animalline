{% form_theme form 'Form/form_div_layout.twig' %}
{% set site_type = 'adoption' %}
{% extends 'animalline/adoption/frame.twig' %}

{% block main %}
    <section id="breeder-column" class="breeder-column_dog">
        <div class="inner">
            <div class="ec-pageHeader">
                <h1>{{ petType== 1?'犬舎情報登録':'猫舎情報登録'|trans }}</h1>
            </div>
            <div class="ec-off1Grid">
                <div class="ec-off1Grid__cell">
                    <form name="adoption-house" method="post" action="{{ url('adoption_house_info', {'pet_type': petType}) }}"
                        novalidate class="h-adr">
                        <span class="p-country-name" style="display:none;">Japan</span>
                        <h2>{{ petType == 1 ?'犬舎情報':'猫舎情報' }}</h2>
                        {{ form_widget(form._token) }}
                        <div class="ec-borderedDefs">
                            <div class="mb-5">
                                <dl>
                                    <dt>
                                        {{ form_label(form.conservation_house_name, '運営者氏名', { 'label_attr': { 'class': 'ec-label' }}) }}
                                    </dt>
                                    <dd>
                                        <div class="ec-halfInput{{ has_errors(form.conservation_house_name) ? ' error' }}">
                                            {{ form_widget(form.conservation_house_name, { 'attr': { 'placeholder': 'お名前' }}) }}
                                            {{ form_errors(form.conservation_house_name) }}
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        {{ form_label(form.conservation_house_kana, '運営者氏名(カナ)', { 'label_attr': { 'class': 'ec-label' }}) }}
                                    </dt>
                                    <dd>
                                        <div class="ec-halfInput{{ has_errors(form.conservation_house_kana) ? ' error' }}">
                                            {{ form_widget(form.conservation_house_kana, { 'attr': { 'placeholder': 'お名前（カナ）' }}) }}
                                            {{ form_errors(form.conservation_house_kana) }}
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        <div>
                                            {{ form_label(form.conservation_house_address, '所在地', { 'label_attr': { 'class': 'ec-label' }}) }}
                                            <p style="font-size:14px;color:#DE5D50;">〒は'-'を入れずに入力してくだい</p>
                                        </div>
                                        <button class="btn btn-ec-regular mb-2" id="copy" type="button" style="background: #f0f0f0; border: 1px solid black;">保護団体情報コピー</button>
                                    </dt>
                                    <dd>
                                        <div class="ec-zipInput{{ has_errors(form.conservation_house_house_zip) ? ' error' }}">
                                            <span>{{ '〒'|trans }}</span>
                                            {{ form_widget(form.conservation_house_house_zip) }}
                                            <div class="ec-zipInputHelp">
                                                <div class="ec-zipInputHelp__icon">
                                                    <div class="ec-icon"><img
                                                                src="/html/template/default/assets/icon/question-white.svg"
                                                                alt="">
                                                    </div>
                                                </div>
                                                <a href="https://www.post.japanpost.jp/zipcode/"
                                                target="_blank"><span>郵便番号検索</span></a>
                                            </div>
                                            {{ form_errors(form.conservation_house_house_zip) }}
                                            <input type="hidden" id="Zip" value={{conservation.zip}}>
                                        </div>
                                        <div class="ec-select{{ has_errors(form.pref) ? ' error' }}">
                                            {{ form_widget(form.pref) }}
                                            {{ form_errors(form.pref) }}
                                            <input type="hidden" id="Pref" value={{conservation.PrefId.Id}}>
                                        </div>
                                        <div class="ec-input{{ has_errors(form.conservation_house_city) ? ' error' }}">
                                            {{ form_widget(form.conservation_house_city, { 'attr': { 'placeholder': '市区町村名(例：大阪市北区)' }}) }}
                                            {{ form_errors(form.conservation_house_city) }}
                                            <input type="hidden" id="City" value={{conservation.city}}>
                                        </div>
                                        <div class="ec-input{{ has_errors(form.conservation_house_address) ? ' error' }}">
                                            {{ form_widget(form.conservation_house_address,  { 'attr': { 'placeholder': '番地・ビル名(例：西梅田1丁目6-8)' }}) }}
                                            {{ form_errors(form.conservation_house_address) }}
                                            <input type="hidden" id="Address" value={{conservation.address}}>
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        {{ form_label(form.conservation_house_house_tel, 'TEL', { 'label_attr': { 'class': 'ec-label' }}) }}
                                        <p style="font-size:14px;color:#DE5D50;">ハイフン（-） なしで入力してください。</p>
                                    </dt>
                                    <dd>
                                        <div class="ec-halfInput{{ has_errors(form.conservation_house_house_tel) ? ' error' }}">
                                            {{ form_widget(form.conservation_house_house_tel) }}
                                            {{ form_errors(form.conservation_house_house_tel) }}
                                            <input type="hidden" id="Tel" value={{conservation.tel}}>
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        {{ form_label(form.conservation_house_house_fax, 'FAX', { 'label_attr': { 'class': 'ec-label' }}) }}
                                        <p style="font-size:14px;color:#DE5D50;">ハイフン（-） なしで入力してください。</p>
                                    </dt>
                                    <dd>
                                        <div class="ec-halfInput{{ has_errors(form.conservation_house_house_fax) ? ' error' }}">
                                            {{ form_widget(form.conservation_house_house_fax) }}
                                            {{ form_errors(form.conservation_house_house_fax) }}
                                            <input type="hidden" id="Fax" value={{conservation.fax}}>
                                        </div>
                                    </dd>
                                </dl>

                                <dl>
                                    <dt>
                                        {{ form_label(form.conservation_house_front_name, '担当者名', { 'label_attr': { 'class': 'ec-label' }}) }}
                                    </dt>
                                    <dd>
                                        <div class="ec-halfInput{{ has_errors(form.conservation_house_front_name) ? ' error' }}">
                                            {{ form_widget(form.conservation_house_front_name, { 'attr': { 'placeholder': '担当者名' }}) }}
                                            {{ form_errors(form.conservation_house_front_name) }}
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        {{ form_label(form.conservation_house_front_tel, '担当者TEL', { 'label_attr': { 'class': 'ec-label' }}) }}
                                        <p style="font-size:14px;color:#DE5D50;">ハイフン（-） なしで入力してください。</p>
                                    </dt>
                                    <dd>
                                        <div class="ec-halfInput{{ has_errors(form.conservation_house_front_tel) ? ' error' }}">
                                            {{ form_widget(form.conservation_house_front_tel) }}
                                            {{ form_errors(form.conservation_house_front_tel) }}
                                        </div>
                                    </dd>
                                </dl>

                            </div>
                        </div>
                        <div class="ec-registerRole__actions">
                            <div class="ec-off4Grid">
                                <div class="ec-off4Grid__cell">
                                    <input type="hidden" name="return_path" value="{{ return_path }}" />
                                    <button class="ec-blockBtn--action" data>登録</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{ include('animalline/components/_modal_confirm.twig') }}
    </section>
{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/adoption-style.css') }}">
{% endblock %}
{% block javascript %}
<script src="{{ asset('assets/js/conservation_house.js') }}"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="//yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>

<script>
    document.getElementById("copy").onclick = function() {
        // 保護団体情報をライセンス情報にコピー
        document.getElementById("conservation_house_conservation_house_house_zip").value = document.getElementById("Zip").value 
        document.getElementById("conservation_house_pref").value = document.getElementById("Pref").value
        document.getElementById("conservation_house_conservation_house_city").value = document.getElementById("City").value
        document.getElementById("conservation_house_conservation_house_address").value = document.getElementById("Address").value
        document.getElementById("conservation_house_conservation_house_house_tel").value = document.getElementById("Tel").value 
        document.getElementById("conservation_house_conservation_house_house_fax").value = document.getElementById("Fax").value 
    };
</script>
{% endblock %}
        