{% set site_type = 'adoption' %}
{% extends 'animalline/adoption/frame.twig' %}

{% block main %}
    <a href="{{ path('adoption_pets_new') }}" class="btn btn-warning text-align-center w-25 float-right">
        保護犬猫情報登録
    </a>
    <div class="mypage-service_list__table">
        <div class="mypage-service_list__table_body">
            <table>
                    <tr>
                        <th></th>
                        <th>犬種/猫種</th>
                        <th>登録日時</th>
                        <th></th>
                    </tr>
                    {% for pet in pets%}
                        <tr>
                            <td class="image">
                                <figure>
                                    <a href="{{ url('adoption_pets_edit', {'id': pet['cp_id']}) }}">
                                        <img src="{{ app.request.schemeAndHttpHost ~ '/' ~ constant('Customize\\Config\\AnilineConf::ANILINE_IMAGE_URL_BASE') ~ (pet['cp_thumbnail_path'] | default('/noimage_plugin_list.png')) }}" class="card-img-top">
                                    </a>
                                </figure>
                                <p>{{ pet.cp_id }}</p>
                            </td>
                            <td class="name"><a href="{{ url('adoption_pets_edit', {'id': pet['cp_id']}) }}">{{ pet['breeds_name'] ?? '' }}</a></td>
                            <td class="time">{{ pet['cp_pet_birthday'].format('Y/m/d H:i:s') }}</td>
                            <td class="receive">
                                {% if pet['check'] %}
                                    <a href="{{ url('adoption_message', {'id':pet['cch_id']}) }}">
                                        <div class="receive-icon">
                                            {% if pet['message'] %}
                                                {% if pet['message'].isReading == constant('Customize\\Config\\AnilineConf::RESPONSE_REPLIED') %}
                                                    <i class="bi bi-envelope-open"></i>
                                                {% elseif pet['message'].isReading == constant('Customize\\Config\\AnilineConf::RESPONSE_UNREPLIED') %}
                                                    <i class="bi bi-envelope"></i>
                                                    <span class="budge">1</span>
                                                {% endif %}
                                            {% endif %}
                                        </div>
                                        <p>{{ pet['last_msg'] ?? 'なし' }}</p>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <span class="mb-2">
                            結果が０件です。
                        </span>
                    {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/adoption-style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/mypage.css') }}">
{% endblock %}
{% block javascript %}{% endblock %}