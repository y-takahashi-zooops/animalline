{% set site_type = 'breeder' %}
{% extends 'animalline/adoption/frame.twig' %}
{# {% form_theme form 'Form/form_div_layout.twig' %} #}

{% block main %}
    <div class="ec-layoutRole__main">
        <div class="ec-mypageRole">
            <div class="ec-pageHeader">
                <h1>特典受取手続き</h1>
            </div>
        </div>
        <div class="ec-mypageRole">
            <div class="ec-editRole">
                <div class="ec-off1Grid">
                    <div class="ec-off1Grid__cell">
                        <form method="post" action="{{ url('adoption_benefits') }}">
                            {{ form_widget(form._token) }}
                            <div class="row mb-3">
                                <div class="col-md-3">
                                    {{ form_label(form.shipping_name, '宛名', { 'label_attr': {'class': 'ec-label' }}) }}
                                    <span class="ec-required">必須</span>
                                    <label style="color: red">特典送付の宛先になります。表示内容に追加があればご編集ください</label>
                                </div>
                                <div class="col-md-8 ec-input ec-select">
                                    {{ form_widget(form.shipping_name) }}
                                    {{ form_errors(form.shipping_name) }}
                                </div>
                            </div>
                            <div>
                                <div class="h-adr">
                                    <div class="row">
                                        <div class="col-3">
                                            <div class="d-inline-block">
                                                {{ form_label(form.shipping_zip, '郵便番号', { 'label_attr': { 'class': 'ec-label' }}) }}
                                            </div>
                                        </div>
                                        <div class="col-2 mb-2">
                                            <div class="ec-zipInput">
                                                {{ form_widget(form.shipping_zip) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-3">
                                            <div class="d-inline-block">
                                                {{ form_label(form.pref, '都道府県', { 'label_attr': { 'class': 'ec-label' }}) }}
                                            </div>
                                        </div>
                                        <div class="col-2 mb-2">
                                            <div class="ec-select">
                                                {{ form_widget(form.pref) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-3">
                                            <div class="d-inline-block">
                                                {{ form_label(form.shipping_city, '市区町村', { 'label_attr': { 'class': 'ec-label' }}) }}
                                            </div>
                                        </div>
                                        <div class="col-2 mb-2">
                                            <div class="ec-input">
                                                {{ form_widget(form.shipping_city, { 'attr': { 'placeholder': '市区町村名(例：大阪市北区)'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-3">
                                            <div class="d-inline-block">
                                                {{ form_label(form.shipping_address, '市区町村以下住所', { 'label_attr': { 'class': 'ec-label' }}) }}
                                            </div>
                                        </div>
                                        <div class="col-6 mb-2">
                                            <div class="ec-input">
                                                {{ form_widget(form.shipping_address,  { 'attr': { 'placeholder': '番地・ビル名(例：西梅田1丁目6-8)'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>電話番号</span>
                                        </div>
                                    </div>
                                    <div class="col-2 mb-2">
                                        {{ form_widget(form.shipping_tel) }}
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/adoption-style.css') }}">
{% endblock %}
{% block javascript %}{% endblock %}
