{% set site_type = 'adoption' %}
{% extends 'animalline/adoption/frame.twig' %}

{% block main %}
<div class="main">
    <div class="row">
        <div class="main-container col-12">
            <h1>保護団体登録申請</h1>
            <div class="row">
                <div class="col-lg-4"></div>
                <div class="col-lg-4 col-md-12">
                    <button type="button" name="examination_link" class="btn btn-warning btn-block mt-3" onclick="location.href='{{url('adoption_baseinfo')}}'"> 
                        {% if regcheck[1] == 1 %}<i class="fas fa-check-circle mypage-checkmark"></i>{% endif %}
                        Step1 - サイト表示情報入力
                    </button>
                </div>
            </div>

            <input type="hidden" id="step" value="{{ step }}">
            {% if step > 1 %}
                <div class="row">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-4 col-md-12">
                        <button type="button" name="examination_link" class="btn btn-warning btn-block mt-3" onclick="location.href='{{path('adoption_house_info',{'pet_type': 1 })}}'"> 
                            {% if regcheck[2] == 1 %}<i class="fas fa-check-circle mypage-checkmark"></i>{% endif %}
                            Step2 - 情報登録
                        </button>
                    </div>
                </div>
            {% endif %}
            {% if step > 3 %}
                <div class="row">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-4 col-md-12">
                        {# <button type="button" id="submit" name="examination_link" class="btn btn-warning btn-block mt-3" onclick="location.href='{{path('adoption_examination_submit')}}'">  #}
                        <button type="button" id="submit" name="examination_link" class="btn btn-warning btn-block mt-3"> 
                            Step3 - 審査情報提出
                        </button>
                    </div>
                </div>
            {% endif %}
            {% if step > 4 %}
                <div class="row">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-4 col-md-12">
                        <div class="mt-3">        
                            <span>
                                現在登録内容を確認中です。登録の完了はメールにて完了通知をお送り致します。<br />
                                登録が完了すると、生体情報の登録が可能になります。<br />
                                登録完了までしばらくお待ち下さい。
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-4"></div>
                </div>
                {#
                <div class="row">
                    <div class="col-lg-8 col-md-12" style="margin: 5rem auto 0 auto;">
                        <img src="{{ asset('assets/img/reg/pet_regist_info.png') }}" alt="ペットの家庭教師"/>
                    </div>
                </div>
                #}
            {% endif %}
        </div>
    </div>
</div>
{{ include('animalline/components/_modal_exam_confirm_adoption.twig') }}

{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/adoption-style.css') }}">
{% endblock %}
{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    step = document.getElementById('step').value
    if( step > 4){
        $('.btn-warning').attr('disabled', true);
        $('.btn-danger').attr('disabled', true);
    }

    document.getElementById("submit").onclick = function() {
        $('#modal').modal('show');
    };
    
    $("#confirm-yes").click(function (e) {
        window.location.href = "{{url('adoption_examination_submit')}}"
    });
</script>
{% endblock %}