{% set site_type = 'breeder' %}
{% extends 'animalline/breeder/frame.twig' %}
{% form_theme form 'Form/form_div_layout.twig' %}

{% block main %}
<div class="ec-layoutRole__main">
    <div class="ec-mypageRole">
        <div class="ec-pageHeader">
            <h1>特典受取手続き(確認)</h1>
        </div>
    </div>
    <div class="ec-mypageRole">
        <div class="ec-editRole">
            <div class="ec-off1Grid">
                <div class="ec-off1Grid__cell">
                    <form method="post" action="{{ url('breeder_benefits') }}">
                        {{ form_widget(form._token) }}
                        <div class="row mb-3">
                            <div class="col-md-3">
                                {{ form_label(form.shipping_name, '受取の宛名', { 'label_attr': {'class': 'ec-label' }}) }}
                                <span class="ec-required">必須</span>
                                <label style="color: red">特典送付の宛先になります。表示内容に追加があればご編集ください。</label>
                            </div>
                            <div class="col-md-8 ec-input ec-select">
                                {{ form.shipping_name.vars.data }}
                                {{ form_widget(form.shipping_name, { type : 'hidden' }) }}
                            </div>
                        </div>
                        <div>
                            <div class="h-adr">
                                <span class="p-country-name" style="display:none;">Japan</span>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            {{ form_label(form.shipping_zip, '郵便番号', { 'label_attr': { 'class':
                                            'ec-label' }}) }}
                                        </div>
                                        <div style="font-size:16px;color:#F00">〒は'-'を入れずに入力してくだい<br />特典送付先住所となります。表示内容に追加・変更があれば ご編集ください。
                                        </div>
                                    </div>
                                    <div class="col-2 mb-2">
                                        <div class="ec-zipInput">
                                            {{ form.shipping_zip.vars.data }}
                                            {{ form_widget(form.shipping_zip, { type : 'hidden' }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            {{ form_label(form.Pref, '都道府県', { 'label_attr': { 'class': 'ec-label' }})
                                            }}
                                        </div>
                                    </div>
                                    <div class="col-2 mb-2">
                                        <div class="ec-select">
                                            {{ form.Pref.vars.data }}
                                            {{ form_widget(form.Pref, { type : 'hidden' }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            {{ form_label(form.shipping_city, '市区町村', { 'label_attr': { 'class':
                                            'ec-label' }}) }}
                                        </div>
                                    </div>
                                    <div class="col-2 mb-2">
                                        <div class="ec-input">
                                            {{ form.shipping_city.vars.data }}
                                            {{ form_widget(form.shipping_city, { type : 'hidden' }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            {{ form.shipping_name.vars.data }}
                                            {{ form_label(form.shipping_address, '市区町村以下住所', { 'label_attr': { 'class':
                                            'ec-label' }}) }}
                                        </div>
                                    </div>
                                    <div class="col-6 mb-2">
                                        <div class="ec-input">
                                            {{ form.shipping_address.vars.data }}
                                            {{ form_widget(form.shipping_address, { type : 'hidden' }) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <div class="d-inline-block">
                                        <span>電話番号</span>
                                    </div>
                                </div>
                                <div class="col-2 mb-2">
                                    {{ form.shipping_tel.vars.data }}
                                    {{ form_widget(form.shipping_tel, { type : 'hidden' }) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mx-auto">
                                <button type="submit" class="ec-blockBtn--action mb-2" name="mode" value="complete">{{
                                    '送信する'|trans }}
                                </button>
                                <button type="submit" class="ec-blockBtn--cancel" name="mode" value="back">{{ '戻る'|trans
                                    }}
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ asset('assets/css/breeder-style.css') }}">
{% endblock %}
{% block javascript %}{% endblock %}