{% set site_type = 'breeder' %}
{% set params = app.request.query.all %}
{% extends 'animalline/breeder/frame.twig' %}

{% block main %}
    <section id="breeder-column">
        <div class="inner">
            <div class="breeder-column__main_section" id="breeder-column__main_section_dog_new">
                <div class="breeder-column__main_section_title">
                    <h2>ブリーダー問い合わせメッセージ</h2>
                </div>
                <div class="breeder-column__main_section_body">
                    <div class="breeder_section_header">
                        <i class="fas fa-paw"></i>
                        ブリーダー情報
                    </div>
                    <div class="row mb-4 mt-4">
                        <div class="col-md-3 col-sm-4">
                            <a class="w-100" target="_blank" href="{{ url('breeder_detail', {'breeder_id': message.getBreeder.Id}) }}">
                                <img alt="..." src="{{ breeder.thumbnailPath | default('/' ~ constant('Customize\\Config\\AnilineConf::ANILINE_IMAGE_URL_BASE') ~ '/noimage_plugin_list.png') }}"
                                class="w-100 mb-4 mb-sm-0">
                            </a>
                        </div>
                        <div class="breeder-info col-sm-8">
                            <h3 class="font-weight-500 color-gray-500 mb-4">{{ breeder.licenseHouseName }}
                                ブリーダー</h3>
                            <div class="d-flex mb-2">
                                {{ include('animalline/components/_rating_block.twig', { 'point': breeder.breederRank() }, ignore_missing = false) }}
                            </div>
                            <div class="d-flex mb-2">
                                <h6>動物取扱業登録番号：{{ breeder.licenseNo }}</h6>
                            </div>
                            <div class="d-flex mb-2">
                                <h6>
                                    登録：{{ breeder.licenseRegistDate | date('Y/m/d') }}&emsp;
                                    有効期限：{{ breeder.licenseExpireDate | date('Y/m/d') }}
                                </h6>
                            </div>
                            <div class="d-flex">
                                <h6>動物取扱責任者：</h6>
                                <h6>{{ breeder.licenseManagerName }}</h6>
                            </div>
                            <div class="d-flex mb-2">
                                <h6>犬舎所在地：</h6>
                                {% set houseDog = breeder.getBreederHouseByPetType(constant('Customize\\Config\\AnilineConf::ANILINE_PET_KIND_DOG')) %}
                                {% set houseCat = breeder.getBreederHouseByPetType(constant('Customize\\Config\\AnilineConf::ANILINE_PET_KIND_CAT')) %}
                                {% if (breeder.handlingPetKind == constant('Customize\\Config\\AnilineConf::ANILINE_PET_KIND_DOG_CAT')) %}
                                    <h6>{{ houseDog.breederHousePref ~ houseDog.breederHouseCity ?? '' ~ ' ' ~ houseCat.breederHousePref ~ houseCat.breederHouseCity ?? '' }}</h6>
                                {% elseif (breeder.handlingPetKind == constant('Customize\\Config\\AnilineConf::ANILINE_PET_KIND_DOG')) %}
                                    <h6>{{ houseDog.breederHousePref ~ houseDog.breederHouseCity ?? '' }}</h6>
                                {% else %}
                                    <h6>{{ houseCat.breederHousePref ~ houseCat.breederHouseCity ?? '' }}</h6>
                                {% endif %}
                            </div>
                            <a target="_blank" href="{{ url('breeder_detail', {'breeder_id': breeder.id}) }}">
                                <h4 class="color-breeder mt-4 d-inline-block">ブリーダー詳細ページへ</h4>
                            </a>
                        </div>
                    </div>

                    <div class="breeder_section_header">
                        {% if message.contactType == 1 %}
                        お問い合わせ
                        {% elseif message.contactType == 2 %}
                        見学希望
                        {% endif %}
                    </div>
                    <div style="background:#fff3dd; border:#388e3c 1px solid">
                        <div class="p-2">
                            <div class="ml-3">
                                <h3 class="mb-2" style="border-bottom: 1px dotted #cd8362;">{{ message.contactTitle }}</h3>
                                <h5 class="mb-2 font-weight-400">{{ message.contactDescription|nl2br }}</h5>
                                
                                <h5 class="mb-2 font-weight-400">{{ message.bookingRequest }}</h5>
                                {% if(message.imageFile) %}
                                <div class="ml-3">
                                    <img src="/html/upload/contact/{{ message.imageFile }}" style="width : 30vw" >
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <h6 class="text-right">{{ message.sendDate | date('Y/m/d h:i')}}</h6>
                    <div class="m-2 p-2"></div>

                    {# 返信メッセージ #}
                    {% for listMessage in listMsg %}
                        {# ユーザーからの返信 #}
                        {% if listMessage.messageFrom == constant('Customize\\Config\\AnilineConf::MESSAGE_FROM_USER') %}
                            <div class="balloon">
                                <div class="chatting">
                                    <div class="message message-right">
                                        {{ listMessage.isDelete == constant('Customize\\Config\\AnilineConf::ANILINE_MESSAGE_DELETED') ? 'このメッセージは削除されました' : listMessage.contactDescription|nl2br }}
                                        {% if(listMessage.imageFile) %}
                                            <div class="ml-3">
                                                <img src="/html/upload/contact/{{ listMessage.imageFile }}" style="width : 30vw" >
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <h6 class="text-right" style="padding-right:24px;">
                                    {#
                                    {% if listMessage.isDelete != constant('Customize\\Config\\AnilineConf::ANILINE_MESSAGE_DELETED')%}
                                        <i class="fas fa-times-circle delete" data-id="{{ listMessage.id }}" data-role="{{ constant('Customize\\Config\\AnilineConf::MESSAGE_USER') }}"></i>
                                    {% endif %}
                                    #}
                                    {{ listMessage.sendDate | date('Y/m/d H:i') }}
                                </h6>
                            </div>
                        {# ブリーダーからの返信 #}
                        {% else %}
                            <div class="balloon">
                                <div class="icon">
                                    <img src="{{ breeder.thumbnailPath }}"/>
                                </div>
                                <div class="chatting">
                                    <div class="message message-left">
                                        {{ listMessage.isDelete == constant('Customize\\Config\\AnilineConf::ANILINE_MESSAGE_DELETED') ? 'このメッセージは削除されました' : listMessage.contactDescription|nl2br }}
                                        {% if(listMessage.imageFile) %}
                                            <div class="ml-3">
                                                <img src="/html/upload/contact/{{ listMessage.imageFile }}" style="width : 30vw" >
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <h6 class="text-right">
                                    {{ listMessage.sendDate | date('Y/m/d H:i') }}
                                </h6>
                            </div>
                        {% endif %}
                    {% endfor %}

                    {# 返信欄・ボタン #}
                    {% if message.contractStatus not in constant('Customize\\Config\\AnilineConf::CONTRACT_STATUSES_ENABLE') %}
                        <div class="row">
                            <div class="col-12">
                                <div class="py-3">

                                    <form action="{{ url('nopet_breeder_message', {'id': message.id}) }}" method="post" name="breeder-msg-form" enctype="multipart/form-data">
                                        <textarea {{ params.isScroll is defined ? 'autofocus' }} aria-label="dialog-chat" class="col-12 p-2" rows="5" name="reply_message"
                                            placeholder="返信メッセージ"></textarea>
                                        <input type="file" id="breeder_contact_files" name="files" accept="image/*" class="form-control-file">
                                        <button type="submit" class="ec-blockBtn--cancel mt-2 mb-4">返信メッセージ送信</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    <form action="{{ url('delete_message_breeder') }}" method="post" name="contract-delete-form">
        <input type="hidden" value="" name="msgId" class="msgId">
        <input type="hidden" value="" name="role" class="role">
        {{ include('animalline/components/_modal_delete.twig') }}
    </form>

{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <link rel="stylesheet" href="{{ asset('assets/css/breeder-style.css') }}">
    <style>
        .delete {
            color: red;
            cursor: pointer;
        }
        @media (max-width: 576px) {
            .flex-sm-column {
                -ms-flex-direction: column !important;
                flex-direction: column !important;
            }
        }
        .d-flex>button {
            flex: 0 0 49%;
        }
    </style>
{% endblock %}
{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(".delete").click(function() {
        $(".msgId").val($(this).data('id'));
        $(".role").val($(this).data('role'));
        $('#modal_delete').modal('show');
    })

    $("#confirm-yes-cancel").click(function (e) {
        $("form[name='contract-cancel-form']").submit();
    });
</script>
{% endblock %}