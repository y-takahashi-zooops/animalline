{% set site_type = 'breeder' %}
{% extends 'animalline/breeder/frame.twig' %}

{% set check_status = {1:'キット発送中 ', 3:'ペット登録完了・返送中', 4:'検体異常', 5: 'DNA検査中', 6:'検査通過', 7:'検査NG', 8:'検体再送付手続済', 9:'ペット情報公開済'} %}
{% set params = app.request.query.all %}

{% block main %}
<section id="breeder-column">
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <form id="form_bulk" method="POST" action="">
                    <input type="hidden" name="dna-id" value="">
                    <div class="row justify-content-between mb-2">
                        <div class="col-6"></div>
                        <div class="col-4 col-md-2 text-right">
                            {% if params.is_all is defined and params.is_all == 1 %}
                                <a href="{{ url('breeder_examination_status') }}"
                                   class="btn btn-warning btn-block mt-3">未完了のみ表示</a>
                            {% else %}
                                <a href="{{ url('breeder_examination_status', {'is_all': 1}) }}"
                                   class="btn btn-warning btn-block mt-3">全件表示</a>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card rounded border-0 mb-4 d-block">
                        <div class="card-body p-0">
                            <table class="table table-sm dna-table text-center responsive-table">
                                <thead class="heading">
                                <tr>
                                    <th class="border-top-0 pt-2 pb-2">ID</th>
                                    <th class="border-top-0 pt-2 pb-2">画像</th>
                                    <th class="border-top-0 pt-2 pb-2">種別</th>
                                    <th class="border-top-0 pt-2 pb-2">犬種/猫種</th>
                                    <th class="border-top-0 pt-2 pb-2">検査ステータス</th>
                                    <th class="border-top-0 pt-2 pb-2">キット出荷</th>
                                    <th class="border-top-0 pt-2 pb-2">キット返送</th>
                                    {# <th class="border-top-0 pt-2 pb-2 pr-3" colspan="3">操作</th> #}
                                </tr>
                                </thead>
                                <tbody>
                                {% for dna in dnas %}
                                    <tr>
                                        <td class="align-middle id" data-label="ID">{{ dna.dna_id }}</td>
                                        <td class="align-middle">
                                            {# <a target="_blank"
                                               href="{{ url('breeder_pet_detail', {'id': dna.pet_id}) }}"> #}
                                                <img style="max-width: 50px"
                                                     src="{{ '/' ~ constant('Customize\\Config\\AnilineConf::ANILINE_IMAGE_URL_BASE') ~ dna.thumbnail_path | default('/noimage_plugin_list.png') }}">
                                            {# </a> #}
                                        </td>
                                        <td class="align-middle" data-label="種別">
                                            {{ dna.pet_kind == constant('Customize\\Config\\AnilineConf::ANILINE_PET_KIND_DOG') ? '犬' : '猫' }}
                                        </td>
                                        <td class="align-middle" data-label="犬種/猫種">{{ dna.breeds_name }}</td>
                                        <td class="align-middle" data-label="検査ステータス">{{ check_status[dna.check_status] }}</td>
                                        <td class="align-middle" data-label="キット出荷">
                                            {{ dna.kit_shipping_date is empty ? '_' : dna.kit_shipping_date | date('Y/m/d') }}
                                        </td>
                                        <td class="align-middle" data-label="キット返送">
                                            {{ dna.kit_return_date is empty ? '_' : dna.kit_return_date | date('Y/m/d') }}
                                        </td>
                                        {#
                                        <td class="align-middle pr-3" colspan="3">
                                            <div class="text-right">
                                                <div class="px-1 d-inline-block text-center" data-tooltip="true"
                                                     data-placement="top" title="検査キット再請求">
                                                    <a class="btn btn-ec-actionIcon" {{ dna.check_status == constant('Customize\\Config\\AnilineConf::ANILINE_DNA_CHECK_STATUS_PASSED') ? 'onclick=change('~dna.dna_id~')' : 'disabled' }}>
                                                        <i class="fa fa-vial fa-lg text-secondary"
                                                           aria-hidden="true"></i>
                                                    </a>
                                                </div>
                                                <!--
                                                <div class="px-1 d-inline-block text-center" data-tooltip="true"
                                                     data-placement="top" title="審査結果表示">
                                                    <a href="#" class="btn btn-ec-actionIcon">
                                                        <i class="fa fa-files-o fa-lg text-secondary"
                                                           aria-hidden="true"></i>
                                                    </a>
                                                </div>
                                                -->
                                            </div>
                                        </td>
                                        #}
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="10">結果が０件です。</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="modal fade" id="confirm-modal" tabindex="-1" role="dialog"
                             aria-labelledby="confirm-modal" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3 class="modal-title font-weight-bold">
                                            確認ダイアログ
                                        </h3>
                                        <button class="close" type="button" data-bs-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body text-left">
                                        <span class="text-left modal-message">検査キットの再請求をしますか？</span>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">
                                            {{ 'common.cancel'|trans }}
                                        </button>
                                        <button class="btn btn-ec-conversion" type="submit">
                                            はい
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="navigation float-right">
                {{ knp_pagination_render(dnas, '@KnpPaginator/twitter_bootstrap_v4_pagination.html.twig') }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/breeder-style.css') }}">
{% endblock %}
{% block javascript %}
<script src="//yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>
<script>
    function change(id) {
    $('input[name=dna-id]').val(id);
    $('#confirm-modal').modal('show');
};
    $(".btn-ec-conversion").on('click', function() {
    setTimeout(function () {
        $('#confirm-modal').modal('hide');
    }, 2000);
});
</script>
{% endblock %}