{% form_theme form 'Form/form_div_layout.twig' %}
{% set site_type = 'breeder' %}
{% extends 'animalline/breeder/frame.twig' %}

{% block main %}
    <section id="breeder-column" class="breeder-column_dog">
        <div class="inner">
            <div class="ec-pageHeader">
                <h1>{{ petType== 1?'犬舎情報登録':'猫舎情報登録'|trans }}</h1>
            </div>
            <div class="ec-off1Grid">
                <div class="ec-off1Grid__cell">
                    <form name="breeder-house" method="post" action="{{ url('breeder_house_info', {'pet_type': petType}) }}"
                        novalidate class="h-adr">
                        <span class="p-country-name" style="display:none;">Japan</span>
                        {# <div class="row" style="border-bottom:1px dotted #ccc">
                            <h2 class="mr-4 mt-1">{{ petType==1?'犬舎情報':'猫舎情報' }}</h2>
                            <button class="btn btn-ec-regular mb-2" id="copy" type="button">ライセンス情報コピー</button>
                        </div> #}
                        <h4>{{ petType==1?'犬舎情報':'猫舎情報' }}</h4>

                        {{ form_widget(form._token) }}
                        <div class="ec-borderedDefs">
                            <div class="mb-5">
                                <dl>
                                    <dt>
                                        {{ form_label(form.breeder_house_name, 'お名前', { 'label_attr': { 'class': 'ec-label' }}) }}
                                    </dt>
                                    <dd>
                                        <div class="ec-halfInput{{ has_errors(form.breeder_house_name) ? ' error' }}">
                                            {{ form_widget(form.breeder_house_name, { 'attr': { 'placeholder': 'お名前' }}) }}
                                            {{ form_errors(form.breeder_house_name) }}
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        {{ form_label(form.breeder_house_kana, 'お名前(カナ)', { 'label_attr': { 'class': 'ec-label' }}) }}
                                    </dt>
                                    <dd>
                                        <div class="ec-halfInput{{ has_errors(form.breeder_house_kana) ? ' error' }}">
                                            {{ form_widget(form.breeder_house_kana, { 'attr': { 'placeholder': 'お名前（カナ）' }}) }}
                                            {{ form_errors(form.breeder_house_kana) }}
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        <div>
                                            {{ form_label(form.address, '所在地', { 'label_attr': { 'class': 'ec-label' }}) }}
                                        </div>    
                                        <button class="btn btn-ec-regular btn-secondary mb-2" id="copy" type="button">ライセンス情報コピー</button>
                                    </dt>
                                    <dd>
                                        <div class="ec-zipInput{{ has_errors(form.breeder_house_house_zip) ? ' error' }}">
                                            <span>{{ '〒'|trans }}</span>
                                            {{ form_widget(form.breeder_house_house_zip) }}
                                            <input type="hidden" id="licenceZip" value={{breeder.licenseZip}}>
                                            <div class="ec-zipInputHelp">
                                                <div class="ec-zipInputHelp__icon">
                                                    <div class="ec-icon"><img
                                                                src="/html/template/default/assets/icon/question-white.svg"
                                                                alt="">
                                                    </div>
                                                </div>
                                                <a href="https://www.post.japanpost.jp/zipcode/"
                                                target="_blank"><span>郵便番号検索</span></a>
                                            </div>
                                            {{ form_errors(form.breeder_house_house_zip) }}
                                        </div>
                                        <div class="ec-select{{ has_errors(form.address.BreederHousePrefId) ? ' error' }}">
                                            {{ form_widget(form.address.BreederHousePrefId) }}
                                            {{ form_errors(form.address.BreederHousePrefId) }}
                                            <input type="hidden" id="licencePref" value={{breeder.PrefLicense.Id}}>
                                        </div>
                                        <div class="ec-input{{ has_errors(form.address.breeder_house_city) ? ' error' }}">
                                            {{ form_widget(form.address.breeder_house_city, { 'attr': { 'placeholder': '市区町村名(例：大阪市北区)' }}) }}
                                            {{ form_errors(form.address.breeder_house_city) }}
                                            <input type="hidden" id="licenceCity" value={{breeder.licenseCity}}>
                                        </div>
                                        <div class="ec-input{{ has_errors(form.address.breeder_house_address) ? ' error' }}">
                                            {{ form_widget(form.address.breeder_house_address,  { 'attr': { 'placeholder': '番地・ビル名(例：西梅田1丁目6-8)' }}) }}
                                            {{ form_errors(form.address.breeder_house_address) }}
                                            <input type="hidden" id="licenceAddress" value={{breeder.licenseAddress}}>
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        {{ form_label(form.breeder_house_house_tel, 'TEL', { 'label_attr': { 'class': 'ec-label' }}) }}
                                    </dt>
                                    <dd>
                                        <div class="ec-telInput{{ has_errors(form.breeder_house_house_tel) ? ' error' }}">
                                            {{ form_widget(form.breeder_house_house_tel) }}
                                            {{ form_errors(form.breeder_house_house_tel) }}
                                            <input type="hidden" id="licenceTel" value={{breeder.breederTel}}>
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        {{ form_label(form.breeder_house_house_fax, 'FAX', { 'label_attr': { 'class': 'ec-label' }}) }}
                                    </dt>
                                    <dd>
                                        <div class="ec-telInput{{ has_errors(form.breeder_house_house_fax) ? ' error' }}">
                                            {{ form_widget(form.breeder_house_house_fax) }}
                                            {{ form_errors(form.breeder_house_house_fax) }}
                                            <input type="hidden" id="licenceFax" value={{breeder.breederFax}}>
                                        </div>
                                    </dd>
                                </dl>

                                <dl>
                                    <dt>
                                        {{ form_label(form.breeder_house_front_name, '担当者名', { 'label_attr': { 'class': 'ec-label' }}) }}
                                    </dt>
                                    <dd>
                                        <div class="ec-halfInput{{ has_errors(form.breeder_house_front_name) ? ' error' }}">
                                            {{ form_widget(form.breeder_house_front_name, { 'attr': { 'placeholder': '担当者名' }}) }}
                                            {{ form_errors(form.breeder_house_front_name) }}
                                        </div>
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>
                                        {{ form_label(form.breeder_house_front_tel, '担当者TEL', { 'label_attr': { 'class': 'ec-label' }}) }}
                                    </dt>
                                    <dd>
                                        <div class="ec-telInput{{ has_errors(form.breeder_house_front_tel) ? ' error' }}">
                                            {{ form_widget(form.breeder_house_front_tel) }}
                                            {{ form_errors(form.breeder_house_front_tel) }}
                                        </div>
                                    </dd>
                                </dl>

                            </div>
                        </div>
                        <div class="ec-registerRole__actions">
                            <div class="ec-off4Grid">
                                <div class="ec-off4Grid__cell">
                                    <input type="hidden" name="return_path" value="{{ return_path }}" />
                                    <button class="ec-blockBtn--action" data>登録</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{ include('animalline/components/_modal_confirm.twig') }}
    </section>
{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/breeder-style.css') }}">
{% endblock %}
{% block javascript %}
<script src="{{ asset('assets/js/houseinfo.js') }}"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="//yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>

<script>
    document.getElementById("copy").onclick = function() {
        // ブリーダー情報をライセンス情報にコピー
        document.getElementById("breeder_house_breeder_house_house_zip").value = document.getElementById("licenceZip").value 
        document.getElementById("breeder_house_address_BreederHousePrefId").value = document.getElementById("licencePref").value 
        document.getElementById("breeder_house_address_breeder_house_city").value = document.getElementById("licenceCity").value 
        document.getElementById("breeder_house_address_breeder_house_address").value = document.getElementById("licenceAddress").value
        document.getElementById("breeder_house_breeder_house_house_tel").value = document.getElementById("licenceTel").value 
        document.getElementById("breeder_house_breeder_house_house_fax").value = document.getElementById("licenceFax").value 
    };
</script>
{% endblock %}
        