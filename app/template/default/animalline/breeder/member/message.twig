{% set site_type = 'breeder' %}
{% extends 'animalline/breeder/frame.twig' %}

{% block main %}
    <section id="breeder-column">
        <div class="inner">
            <div class="breeder-column__main_section" id="breeder-column__main_section_dog_new">
                <div class="breeder-column__main_section_title">
                    <h2>取引メッセージ</h2>
                </div>
                <div class="breeder-column__main_section_body">
                    <div class="breeder_section_header">
                        <i class="fas fa-paw"></i>
                        ペット情報
                    </div>
                    <div class="row mb-4 mt-4">
                        <div class="col-md-3 col-sm-4">
                            <a href="{{ url('breeder_pet_detail', {'id': message.getPet.Id}) }}"　class="w-100">
                                <img src="{{ '/' ~ constant('Customize\\Config\\AnilineConf::ANILINE_IMAGE_URL_BASE') ~ (rootMessage.getPet.thumbnailPath | default('/noimage_plugin_list.png')) }}"
                                    class="w-100 mb-4 mb-sm-0" alt="...">
                            </a>
                        </div>
                        <div class="col-sm-8">
                            <h3 class="font-weight-500 color-gray-500 mb-4">{{ pet.BreedsType.breedsName ?? '' }}</h3>
                            <div class="d-flex mb-2">
                                <h6>誕生日：{{ pet.petBirthday|date('Y年m月d日') }}生</h6>
                            </div>
                            <div class="d-flex mb-2">
                                <h6>色：{{ pet.getCoatColor().getCoatColorName() ?? '' }}</h6>
                            </div>
                            <div class="d-flex mb-2">
                                <h6>性別：{{ pet.petSex == constant('Customize\\Config\\AnilineConf::ANILINE_PET_SEX_MALE') ? '男の子' : '女の子' }}</h6>
                            </div>
                            <div class="d-flex mb-2">
                                <h6>価格：{{ pet.price }}円</h6>
                            </div>
                            <a href="{{ url('breeder_pet_detail', {'id': pet.id}) }}">
                                <h4 class="color-breeder">ペット詳細ページへ</h4>
                            </a>
                        </div>
                    </div>

                    <div class="breeder_section_header">
                        <i class="fas fa-paw"></i>
                        ブリーダー情報
                    </div>
                    <div class="row mb-4 mt-4">
                        <div class="col-md-3 col-sm-4">
                            <a href="{{ url('breeder_detail', {'breeder_id': message.getBreeder.Id}) }}"　class="w-100">
                                <img alt="..." src="{{ breeder.thumbnailPath | default('/' ~ constant('Customize\\Config\\AnilineConf::ANILINE_IMAGE_URL_BASE') ~ '/noimage_plugin_list.png') }}"
                                class="w-100 mb-4 mb-sm-0">
                            </a>
                        </div>
                        <div class="breeder-info col-sm-8">
                            <h3 class="font-weight-500 color-gray-500 mb-4">{{ breeder.licenseHouseName }}
                                ブリーダー</h3>
                            <div class="d-flex mb-2">
                                {{ include('animalline/components/_rating_block.twig', { 'point': breeder.breederRank() }, ignore_missing = false) }}
                            </div>
                            <div class="d-flex mb-2">
                                <h6>動物取扱業登録番号：{{ breeder.licenseNo }}</h6>
                            </div>
                            <div class="d-flex mb-2">
                                <h6>
                                    登録：{{ breeder.licenseRegistDate | date('Y/m/d') }}&emsp;
                                    有効期限：{{ breeder.licenseExpireDate | date('Y/m/d') }}
                                </h6>
                            </div>
                            <div class="d-flex">
                                <h6>動物取扱責任者：</h6>
                                <h6>{{ breeder.licenseManagerName }}</h6>
                            </div>
                            <div class="d-flex mb-2">
                                <h6>犬舎所在地：</h6>
                                {% set houseDog = breeder.getBreederHouseByPetType(constant('Customize\\Config\\AnilineConf::ANILINE_PET_KIND_DOG')) %}
                                {% set houseCat = breeder.getBreederHouseByPetType(constant('Customize\\Config\\AnilineConf::ANILINE_PET_KIND_CAT')) %}
                                {% if (breeder.handlingPetKind == constant('Customize\\Config\\AnilineConf::ANILINE_PET_KIND_DOG_CAT')) %}
                                    <h6>{{ houseDog.breederHousePref ~ houseDog.breederHouseCity ?? '' ~ ' ' ~ houseCat.breederHousePref ~ houseCat.breederHouseCity ?? '' }}</h6>
                                {% elseif (breeder.handlingPetKind == constant('Customize\\Config\\AnilineConf::ANILINE_PET_KIND_DOG')) %}
                                    <h6>{{ houseDog.breederHousePref ~ houseDog.breederHouseCity ?? '' }}</h6>
                                {% else %}
                                    <h6>{{ houseCat.breederHousePref ~ houseCat.breederHouseCity ?? '' }}</h6>
                                {% endif %}
                            </div>
                            <div class="d-flex mb-4">
                                <h6>審査ステータス：</h6>
                                {% set ex_status = ['審査前', '審査中', '審査OK', '審査NG'] %}
                                <h6>{{ ex_status[breeder.examinationStatus] }}</h6>
                            </div>
                            <a href="{{ url('breeder_detail', {'breeder_id': breeder.id}) }}">
                                <h4 class="color-breeder mt-4">ブリーダー詳細ページへ</h4>
                            </a>
                        </div>
                    </div>

                    <div class="breeder_section_header">
                        {% if message.contactType == 1 %}
                        お問い合わせ
                        {% elseif message.contactType == 2 %}
                        見学希望
                        {% endif %}
                    </div>
                    <div style="background:#fff3dd; border:#388e3c 1px solid">
                        <div class="p-2">
                            <div class="ml-3">
                                <h3 class="mb-2" style="border-bottom: 1px dotted #cd8362;">{{ message.contactTitle }}</h3>
                                <h5 class="mb-2 font-weight-400">{{ message.contactDescription|nl2br }}</h5>
                                {% if message.contactType == 2 %}
                                <h5 class="mb-2 font-weight-400">{{ message.bookingRequest }}</h5>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <h6 class="text-right">{{ message.sendDate | date('Y/m/d h:i')}}</h6>
                    <div class="m-2 p-2"></div>

                    {# 返信メッセージ #}
                    {% for listMessage in listMsg %}
                        {# ユーザーからの返信 #}
                        {% if listMessage.messageFrom == constant('Customize\\Config\\AnilineConf::MESSAGE_FROM_USER') %}
                            <div class="balloon">
                                <div class="chatting">
                                    <div class="message message-right">
                                        {{ listMessage.contactDescription|nl2br }}
                                    </div>
                                </div>
                                <h6 class="text-right" style="padding-right:24px;">{{ listMessage.sendDate | date('Y/m/d H:i') }}</h6>
                            </div>
                        {# ブリーダーからの返信 #}
                        {% else %}
                            <div class="balloon">
                                <div class="icon">
                                    <img src="{{ breeder.thumbnailPath }}"/>
                                </div>
                                <div class="chatting">
                                    <div class="message message-left">
                                        {{ listMessage.contactDescription|nl2br }}
                                    </div>
                                </div>
                                <h6 class="text-right">{{ listMessage.sendDate | date('Y/m/d H:i') }}</h6>
                            </div>
                        {% endif %}
                    {% endfor %}

                    {# 返信欄・ボタン #}
                    {% if message.contractStatus not in constant('Customize\\Config\\AnilineConf::CONTRACT_STATUSES_ENABLE') %}
                        <div class="row">
                            <div class="col-12">
                                <div class="py-3">

                                    <form action="{{ url('breeder_message', {'id': message.id}) }}" method="post" name="breeder-msg-form">
                                        <textarea {{ isScroll ? 'autofocus' }} aria-label="dialog-chat" class="col-12 p-2" rows="5" name="reply_message"
                                            placeholder="返信メッセージ"></textarea>
                                        <button type="submit" class="ec-blockBtn--cancel mt-2 mb-4">返信メッセージ送信</button>
                                        ここに取引が完了した際の報告で特典が受けられることの説明を表記する
                                        <div class="d-flex">
                                            <button {{ message.customerCheck ? 'disabled' }} type="button" class="ec-blockBtn--action mt-2 mr-2"
                                                onclick="location.href='{{ url('breeder_contract', {'pet_id': message.pet.id}) }}'">
                                                取引成約を報告する
                                            </button>
                                            <button type="button" class="ec-blockBtn--cancel mt-2 ml-2" id="cancel">
                                                取引は成約しませんでした
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    <form action="{{ url('breeder_message', {'id': message.id}) }}" method="post" name="contract-cancel-form">
        {{ include('animalline/components/_modal_contract_cancel.twig') }}
    </form>


{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/breeder-style.css') }}">
{% endblock %}
{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    if (document.getElementById("cancel")) {
        document.getElementById("cancel").onclick = function () {
            $('#modal_cancel').modal('show');
        };
    }
    if (document.getElementById("contract")) {
        document.getElementById("contract").onclick = function () {
            $('#modal_contract').modal('show');
        };
    }

    $("#confirm-yes-cancel").click(function (e) {
        $("form[name='contract-cancel-form']").submit();
    });
</script>
{% endblock %}