{% set site_type = 'breeder' %}
{% extends 'ani_frame.twig' %}

{% block main %}
<div class="main">
        <div class="row">
            <div class="main-container col-12">
                <h1>取引メッセージ</h1>
                <div class="m-2 p-2"></div>     
            
                {# ペット情報 #}
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-12 col-sm-10">
                        <h2>ペット情報</h2>
                        <div class="m-1 p-1"></div>
                        <div class="col-12 py-3 breeder-border bg-white">
                            <div class="row">
                                <div class="breeder-img col-sm-4">
                                    <a href="{{ url('breeder_pet_detail', {'id': 1}) }}">
                                        <img src="{{ app.request.schemeAndHttpHost ~ '/' ~ constant('Customize\\Config\\AnilineConf::ANILINE_IMAGE_URL_BASE') ~ (pet.thumbnailPath ?? '/noimage_plugin_list.png') }}"
                                        class="w-100 mb-4 mb-sm-0" alt="...">
                                    </a>
                                </div>
                                <div class="breeder-info col-sm-8">
                                    <h2 class="font-weight-500 color-gray-500">{{ pet.BreedsType.breedsName ?? '' }}</h2>
                                    <div class="m-1 p-1"></div>
                                    <div class="d-flex font-weight-500">
                                        <h4>性別：</h4>
                                        <h4>男の子</h4>
                                    </div>
                                    <div class="m-1 p-1"></div>
                                    <div class="d-flex">
                                        <h4>色：</h4>
                                        <h4>赤色</h4>
                                    </div>
                                    <div class="m-1 p-1"></div>
                                    <div class="d-flex">
                                        <h4>成犬時予想体重：</h4>
                                        <h4>10kg</h4>
                                    </div>
                                    <div class="m-1 p-1"></div>
                                    <div class="d-flex">
                                        <h4>PR：</h4>
                                        <h4>PRコメント</h4>
                                    </div>
                                    <div class="m-1 p-1"></div>
                                    <div class="d-flex">
                                        <h4>誕生日：</h4>
                                        <h4>2018年12月25日生</h4>
                                    </div>
                                    <div class="m-2 p-2"></div>
                                    <a href="{{ url('breeder_pet_detail', {'id': 1}) }}">
                                        <h4 class="color-breeder">ペット詳細ページへ</h4>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="m-2 p-2"></div>

                {# ブリーダー情報 #}
                <div class="row mb-2">
                    <div class="col-1"></div>
                    <div class="col-12 col-sm-10">
                        {% if Customer.isbreeder == 0 %}
                            <h2>ブリーダー情報</h2>
                            <div class="m-1 p-1"></div>
                            <div class="col-12 py-3 breeder-border bg-white">
                                <div class="row">
                                    <div class="breeder-img col-sm-4">
                                        <img alt="..." src="{{ asset('assets/img/breeder-thumbnail.png') }}" class="w-100 mb-4 mb-sm-0">
                                    </div>
                                    <div class="breeder-info col-sm-8">
                                        <h2 class="font-weight-500 color-gray-500">田中 太郎ブリーダー</h2>
                                        <div class="m-1 p-1"></div>
                                        <div class="d-flex">
                                            <h4>総合評価</h4>
                                            <div class="m-1 p-1"></div>
                                            <img alt="..." src="{{ asset('assets/img/star-icon.svg') }}">
                                            <div class="m-1 p-1"></div>
                                            <h4>5.00</h4>
                                        </div>
                                        <div class="m-1 p-1"></div>
                                        <div class="d-flex">
                                            <h4>動物取扱業登録番号：</h4>
                                            <h4>動東第000号</h4>
                                            <div class="m-1 p-1"></div>

                                        </div>
                                        <div class="m-1 p-1"></div>
                                        <div class="d-flex">
                                            <h4>登録：</h4>
                                            <h4>2021/00/00</h4>
                                        </div>
                                        <div class="m-1 p-1"></div>
                                        <div class="d-flex">
                                            <h4>有効期限：</h4>
                                            <h4>2021/00/00</h4>
                                        </div>
                                        <div class="m-1 p-1"></div>
                                        <div class="d-flex">
                                            <h4>動物取扱責任者：</h4>
                                            <h4>田中 太郎</h4>
                                        </div>
                                        <div class="m-1 p-1"></div>
                                        <div class="d-flex">
                                            <h4>犬舎所在地：</h4>
                                            <h4>愛知県豊橋市</h4>
                                        </div>
                                        <div class="m-1 p-1"></div>
                                        <div class="d-flex">
                                            <h4>犬舎見学：</h4>
                                            <h4>見学OK</h4>
                                        </div>
                                        <div class="m-2 p-2"></div>
                                        <a href="breederpage.html">
                                            <h4 class="color-breeder">ブリーダー詳細ページへ</h4>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <h2>ユーザー情報</h2>
                            <div class="m-1 p-1"></div>
                            <div class="col-12 py-3 breeder-border bg-white">
                                <div class="row">
                                    <div class="col-sm-8">
                                        何を表示するか要検討
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="m-2 p-2"></div>

                {# お問い合わせ内容 #}
                <div class="row mb-4">
                    <div class="col-1"></div>
                    <div class="col-12 col-sm-10">
                        <h2 class="mb-2">お問い合わせ内容</h2>
                        <div class="m-1 p-1"></div>
                        <div class="col-12 py-3 breeder-border bg-white">
                            <div class="ml-3">
                                <h2 class="mb-2">問い合わせタイトル</h2>
                                <h4 class="mb-2 font-weight-400">問い合わせメッセージ</h4>
                                <h4 class="mb-2 font-weight-400">訪問希望日</h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-1 user-img">
                        <img src="{{ asset('assets/img/testUser.png') }}">
                    </div>
                    <div class="col-10">
                        <h4 style="text-align: right;">2021/09/01 10:00</h4>
                        <div class="col-12 balloon-left py-3 breeder-border">
                            <div class="ml-3">
                                ユーザーからの返信１
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-10">
                        <h4 style="text-align: right;">2021/09/01 11:00</h4>
                        <div class="col-8 balloon-right py-3 breeder-border">
                            <div class="ml-3">
                                ブリーダーからの返信１
                            </div>
                        </div>
                    </div>
                    <div class="col-1 breeder-img">
                        <img src="{{ asset('assets/img/breeder-thumbnail.png') }}" style="width: 40px; height:40px; border-radius: 50%;">
                    </div>
                </div>

                {# 返信メッセージ #}
                {# {% for childMessage in childMessages %}
                    {% if childMessage.messageFrom == constant('Customize\\Config\\AnilineConf::MESSAGE_FROM_USER') %}
                        <div class="row">
                            <div class="col-1 user-img">
                                <img src="{{ asset('assets/img/testUser.png') }}">
                            </div>
                            <div class="col-10">
                                <h4 style="text-align: right;">{{ childMessage.sendDate.format('Y/m/d　H:i') }}</h4>
                                <div class="col-12 balloon-left py-3 breeder-border">
                                    <div class="ml-3">
                                        {{ childMessage.contactDescription|nl2br }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="row">
                            <div class="col-sm-1"></div>
                            <div class="col-10">
                                <h4 style="text-align: right;">{{ childMessage.sendDate.format('Y/m/d　H:i') }}</h4>
                                <div class="col-8 balloon-right py-3 breeder-border">
                                    <div class="ml-3">
                                        {{ childMessage.contactDescription|nl2br }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-1 breeder-img">
                                <img src="{{ asset('assets/img/breeder-thumbnail.png') }}" style="width: 40px; height:40px; border-radius: 50%;">
                            </div>
                        </div>
                    {% endif %}
                {% endfor %} #}

                {# 返信欄・ボタン #}
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-12 col-sm-10">
                        <div class="py-3">
                            <form action="#" method="post">
                                <textarea aria-label="dialog-chat" class="col-12" rows="5" name="reply_message"
                                        placeholder="返信メッセージ"></textarea>
                                 {# <input aria-label="reason" name="end_negotiation" type="radio"/>交渉を終了する
                                <select aria-label="reason" name="reason" class="ec-select">
                                    <option>非成約理由１</option>
                                    <option>非成約理由２</option>
                                    <option>非成約理由３</option>
                                    <option>非成約理由４</option>
                                     {% for reason in reasons %}
                                        <option value="{{ reason.id }}">{{ reason.reason }}</option>
                                    {% endfor %}
                                </select> #}
                                <button type="submit" class="ec-blockBtn--cancel mt-2 mb-4">送信</button>

                                <div class="d-flex">
                                    {% if Customer.isbreeder == 0 %}
                                        <button type="button" class="ec-blockBtn--action mt-2 mr-2" onclick="location.href='{{url('breeder_contract')}}'">成約</button>
                                    {% else %}
                                        <button type="button" class="ec-blockBtn--action mt-2 mr-2" id="contract">成約</button>
                                    {% endif %}
                                    <button type="button" class="ec-blockBtn--cancel mt-2 ml-2" id="cancel">取引をキャンセルする</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ include('animalline/components/_modal_contract_cancel.twig') }}
    {{ include('animalline/components/_modal_contract.twig') }}
{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/breeder-style.css') }}">
{% endblock %}
{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    
    document.getElementById("cancel").onclick = function() {
        $('#modal_cancel').modal('show');
    };
    
    document.getElementById("contract").onclick = function() {
        $('#modal_contract').modal('show');
    };
    
    $("#confirm-yes").click(function (e) {
    });
</script>
{% endblock %}