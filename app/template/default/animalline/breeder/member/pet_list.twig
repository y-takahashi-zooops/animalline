    <section id="breeder-column" class="breeder-column_dog">
        <div class="inner">
            <div class="row mb-2">
                <div class="col-9"></div>
                <div class="col-3">
                    <a href={{ path('breeder_mypage_pets_new', {'breeder_id': breeder.id} )  }} class="btn btn-warning w-100 text-align-center my-1">
                        追加                            
                    </a>
                </div>
            </div>
            <div class="breeder-column__main_section_title">
                <h3>
                    掲載中のペット          
                </h3>
            </div>
            <div class="breeder-column__main_section_body">
                <ul>
                    {% for pet in pets %}
