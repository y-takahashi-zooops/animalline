{% set site_type = 'breeder' %}
{% extends 'animalline/breeder/frame.twig' %}

{% block main %}
    <div class="ec-pageHeader">
        <h1>検査キット請求</h1>
    </div>
    <div class="ec-off1Grid">
        <div class="ec-off1Grid__cell">
            <form method="post" action="#" novalidate name="update-baseinfo-form">
                <h2>送付先情報</h2>
                
                <div class="ec-borderedDefs">
                    <div class="mb-5">
                        <dl>
                            <dt>
                                送付先住所
                            </dt>
                            <dd>
                                <select>
                                    <option>選択してください</option>
                                    <option>基本情報</option>
                                    <option>犬舎住所</option>
                                    <option>猫舎住所</option>
                                </select>
                            </dd>
                        </dl>
                        <dl>
                            <dt>
                                お名前
                            </dt>
                            <dd>
                                <div class="ec-input">
                                    <input type="text" value="">
                                </div>
                            </dd>
                            </dd>
                        </dl>
                        <dl>
                            <dt>
                                住所
                            </dt>
                            <dd class="h-adr">
                                <span class="p-country-name" style="display:none;">Japan</span>
                                <div class="ec-zipInput">
                                    <div class="ec-input">
                                        <input type="text" value="〒">
                                    </div>
                                    <div class="ec-zipInputHelp">
                                        <div class="ec-zipInputHelp__icon">
                                            <div class="ec-icon"><img
                                                        src="/html/template/default/assets/icon/question-white.svg"
                                                        alt="">
                                            </div>
                                        </div>
                                        <a href="https://www.post.japanpost.jp/zipcode/"
                                           target="_blank"><span>郵便番号検索</span></a>
                                    </div>
                                </div>
                                <div class="ec-select">
                                    <select>
                                        <option>都道府県</option>
                                    </select>
                                </div>
                                <div class="ec-input">
                                    <input type="text" value="市区町村名">
                                </div>
                                <div class="ec-input">
                                   <input type="text" value="番地・ビル名">
                                </div>
                            </dd>
                        </dl>
                        <dl>
                            <dt>
                                電話番号
                            </dt>
                            <dd>
                                <div class="ec-input">
                                    <input type="text" value="">
                                </div>
                            </dd>
                        </dl>
                        <dl>
                            <dt>
                                キット数量
                            </dt>
                            <dd>
                                <div class="ec-input">
                                    <input type="text" value="">
                                </div>
                            </dd>
                        </dl>
                        
                    </div>
                </div>
                <div class="ec-registerRole__actions">
                    <div class="ec-off4Grid">
                        <div class="ec-off4Grid__cell">
                            <button class="ec-blockBtn--action" type="submit" name="mode" value="confirm">登録</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block stylesheet %}
    
{% endblock %}
{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
<script src="//yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>

