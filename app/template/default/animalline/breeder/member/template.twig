{% set site_type = 'breeder' %}
{% extends 'animalline/breeder/frame.twig' %}

{% block main %}
    <section id="breeder-column" class="breeder-column_dog">
        <div class="inner">
            <div class="breeder-column__main_section_title" style="text-align: center">
                <h3>テンプレート編集</h3>
            </div>
            <div class="breeder-column__main_section_body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label class="ec-label required" for="breeder_pets_guarantee">生体保障内容</label>
                            {# <span class="ec-required">必須</span>   #}
                        </div>
                        <div class="col-md-8 ec-input">
                            <textarea id="breeder_pets_guarantee" name="breeder_pets[guarantee]" rows="10" placeholder="ブリーダー様にて設定されている生体保証内容をご記入ください。" class="form-control"></textarea>
                            
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label class="ec-label required" style="padding: 0.375rem 0" for="breeder_pets_delivery_way">引き渡し方法</label>
                            <span class="ec-required">必須</span>  
                        </div>
                        <div class="col-md-8 ec-input">
                            <textarea id="breeder_pets_delivery_way" name="breeder_pets[delivery_way]" required="required" rows="10" placeholder="引き渡し方法をご記入ください。" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label class="ec-label required" style="padding: 0.375rem 0" for="breeder_pets_delivery_way">支払方法</label>
                            <span class="ec-required">必須</span>  
                        </div>
                        <div class="col-md-8 ec-input">
                            <textarea id="breeder_pets_delivery_way" name="breeder_pets[delivery_way]" required="required" rows="10" placeholder="支払方法をご記入ください。" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label class="ec-label required" style="padding: 0.375rem 0" for="breeder_pets_delivery_way">予約金</label>
                            {# <span class="ec-required">必須</span>   #}
                        </div>
                        <div class="col-md-8 ec-input">
                            <textarea id="breeder_pets_delivery_way" name="breeder_pets[delivery_way]" rows="10" placeholder="ブリーダー様にて設定されている予約金をご記入ください。" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <button class="ec-blockBtn--action mt-4 mb-4">登録する</button>
                            <a class="ec-blockBtn--cancel" href=http://animalline.local/breeder/member/pet_list style="color:white;">戻る</a>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/breeder-style.css') }}">
{% endblock %}
{% block javascript %}{% endblock %}
    
