{% set site_type = 'breeder' %}
{% extends 'ani_frame.twig' %}

{% block main %}
<div class="alert-danger m-1">未返信のメッセージがあります。 <a href="#"><<返信する>></a></div>
<div class="alert-danger m-1">基本情報が未登録です。<a href="#"><<基本情報登録>></a></div>
<div class="alert-danger m-1">犬舎もしくは猫舎情報が未登録です <a href="#"><<犬舎情報登録>></a><a href="#"><<猫舎情報登録>></a></div>
<div class="alert-danger m-1">掲載審査依頼が未提出です。<a href="#"><<審査情報登録>></a></div>
<div class="main">
    <div class="row">
        <div class="main-container col-12">
            <h1>保護団体名 - 管理ページ</h1>

            <div class="row">
                <div class="col-lg-4 col-md-12">
                    <a href="{{url('breeder_baseinfo')}}" class="btn btn-warning btn-block mt-3" role="button">基本情報登録</a>
                </div>
                <div class="col-lg-4 col-md-12">
                    <a href="{{path('breeder_houseinfo',{'pet_type': 1})}}" class="btn btn-warning btn-block mt-3" role="button">犬舎情報登録</a>
                </div>
                <div class="col-lg-4 col-md-12">
                    <a href="{{path('breeder_houseinfo',{'pet_type': 2})}}" class="btn btn-warning btn-block mt-3" role="button">猫舎情報登録</a>
                </div>
                <div class="col-lg-4 col-md-12">
                    <a href="{{path('breeder_examinationinfo',{'pet_type': 1})}}" class="btn btn-warning btn-block mt-3" role="button">犬舎審査項目登録</a>
                </div>
                <div class="col-lg-4 col-md-12">
                    <a href="{{path('breeder_examinationinfo',{'pet_type': 2})}}" class="btn btn-warning btn-block mt-3" role="button">猫舎審査項目登録</a>
                </div>
                <div class="col-lg-4 col-md-12">
                    <a href="#" class="btn btn-warning btn-block mt-3" role="button">ペット情報管理</a>
                </div>
                <div class="col-lg-4 col-md-12">
                    <a href="#" class="btn btn-warning btn-block mt-3" role="button">取引メッセージ</a>
                </div>
            </div>

            <div class="m-2 p-2"></div>
            <div class="d-flex justify-content-between align-items-end">
                <h2>交渉中のお取引</h2>
            </div>
            {% for message in rootMessages %}
                <div class="m-1 p-1"></div>
                <div class="row">
                    <div class="col-12">
                        <div class="d-sm-flex justify-content-between py-3 border breeder-border rounded">
                            <div class="ml-5">
                                <h3>{{ message.Breeder.getBreederHouseByPetType(message.pet.petKind).breederHouseName ?? '' }}</h3>
                                <h3><a href={{ path('breeder_configration_messages', {'contact_id': message.id}) }}>{{ message.contactTitle }}</a></h3>
                            </div>
                            <h4 class="mr-sm-5 ml-5">返信日時：{{ lastReplies[message.id].format('Y年m月d日 H:i') ?? 'なし。' }}</h4>
                        </div>
                    </div>
                </div>
            {% else %}
                結果が０件です。
            {% endfor %}
        </div>
    </div>
    <h2 class="py-2 mt-4 mb-4">掲載中のペット</h2>
    <a href={{ path('breeder_configuration_pets_new', {'breeder_id': breeder.id}) }} class="btn basic-btn accent-btn bg-accent text-align-center my-1">追加</a>

    <div class="row mt-4">
        {% for pet in pets %}
            <div class="card col-sm-6 col-md-3 border-0 bg-none mb-4">
                <div class="catalog-card">
                    <a href="{{ url('breeder_configuration_pets_edit', {'id': pet.id}) }}">
                        <img src="{{ app.request.schemeAndHttpHost ~ '/' ~ constant('Customize\\Config\\AnilineConf::ANILINE_IMAGE_URL_BASE') ~ (pet.thumbnailPath | default('/noimage_plugin_list.png')) }}"
                                class="card-img-top" alt="...">
                    </a>
                    <div class="card-body bg-white">
                        <h3 class="color-gray-500 font-weight-600">{{ pet.breedsType.breedsName ?? '' }}</h3>
                        <div class="m-4"></div>
                        <div class="d-flex">
                            <h4 class="mr-2">{{ pet.petBirthday|date('Y年m月d日') }}生</h4>
                            {% if(pet.petSex == constant('Customize\\Config\\AnilineConf::ANILINE_PET_SEX_MALE')) %}
                                <h4 class="pet-set-male">男の子</h4>
                            {% else %}
                                <h4 class="pet-set-female">女の子</h4>
                            {% endif %}
                        </div>
                        <div class="mb-2"></div>
                        <div class="d-flex">
                            {% set breederHouse = pet.Breeder.getBreederHouseByPetType(pet.petKind) %}
							<h4 class="mr-3">{{ breederHouse.breederHouseCity ~ ' ' ~ breederHouse.breederHousePref ?? '' }}</h4>
                            <h4>{{ pet.coatColor.coatColorName ?? '' }}</h4>
                        </div>
                        <div class="m-2"></div>
                        <h4>{{ pet.prComment }}</h4>
                        <div class="m-2"></div>
                        <h4>掲載日{{ pet.releaseDate|date('Y年m月d日') }}</h4>
                        <div class="m-4"></div>
                        <h3 class="color-gray-500 font-weight-600">{{ pet.price|number_format(0) }}<span>円（税込）</span></h3>
                        <a href={{ path('breeder_configuration_pets_edit', {'id': pet.id}) }} class="btn basic-btn btn-primary text-align-center my-2">編集</a>
                    </div>
                </div>
            </div>
        {% else %}
            結果が０件です。
        {% endfor %}
    </div>
</div>
</body>
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/breeder-style.css') }}">
{% endblock %}
{% block javascript %}{% endblock %}
