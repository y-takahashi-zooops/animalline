                    </div>
                </div>
                <div class="m-2 p-2"></div>
                <div class="row">
                    <div class="col-12">
                        <table class="table table-borderless">
                            <tbody>
                            <tr>
                                <th scope="row" class="text-align-center">種類</th>
                                <td class="color-gray-500">{{ breederPet.breedsType.breedsName ?? '' }}</td>
                                <th scope="row" class="text-align-center">性別</th>
                                <td class="color-gray-500">{{ breederPet.petSex == constant('Customize\\Config\\AnilineConf::ANILINE_PET_SEX_MALE') ? '男の子' : '女の子' }}</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-align-center">見学地域</th>
                                {% set breederHouse = breederPet.Breeder.getBreederHouseByPetType(breederPet.petKind) %}
                                <td class="color-gray-500">{{ breederHouse.breederHouseCity ~ ' ' ~ breederHouse.breederHousePref ?? '' }}</td>
                                <th scope="row" class="text-align-center">誕生日</th>
                                <td class="color-gray-500">{{ breederPet.petBirthday.format('Y年m月d日') ?? '' }}</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-align-center">色</th>
                                <td class="color-gray-500">{{ breederPet.coatColor.coatColorName ?? '' }}</td>
                                <th scope="row" class="text-align-center">血統書の有無</th>
                                <td class="color-gray-500">{{ breederPet.getIsPedigree() == 0 ? '無' : '有' }}</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-align-center">ワクチン代の有無</th>
                                <td class="color-gray-500">{{ breederPet.getIncludeVaccineFee() == 0 ? '無' : '有' }}</td>
                                <th scope="row" class="text-align-center">繁殖の可否</th>
                                <td class="color-gray-500">{{ breederPet.getIsBreeding() == 0 ? '否' : '可' }}</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-align-center">ブリーダーへの販売可否</th>
                                <td class="color-gray-500">{{ breederPet.getIsSelling() == 0 ? '否' : '可' }}</td>
                                {% if (breederPet.getPetKind() == constant('Customize\\Config\\AnilineConf::ANILINE_PET_KIND_DOG')) %}
                                    <th scope="row" class="text-align-center">成犬時予想</th>
                                    <td class="color-gray-500">{{ breederPet.futureWait }}kg</td>
                                {% endif %}
                            </tr>
                            <tr>
                                <th scope="row" class="text-align-center" style="vertical-align: middle;">PR</th>
                                <td colspan="3" class="color-gray-500">{{ breederPet.prComment }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="m-2 p-2"></div>
                <div class="row">
                    <div class="price-container col-12">
