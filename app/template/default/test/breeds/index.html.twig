{% set site_type = 'common' %}
{% extends 'ani_frame.twig' %}

{% block main %}
    <h1>Breeds index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pet_kind</th>
                <th>Breeds_name</th>
                <th>Sort_order</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for breed in breeds %}
            <tr>
                <td>{{ breed.id }}</td>
                <td>{{ breed.petKind }}</td>
                <td>{{ breed.breedsName }}</td>
                <td>{{ breed.sortOrder }}</td>
                <td>
                    <a href="{{ path('breeds_show', {'id': breed.id}) }}">show</a>
                    <a href="{{ path('breeds_edit', {'id': breed.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('breeds_new') }}">Create new</a>
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/adoption-style.css') }}">
{% endblock %}
{% block javascript %}{% endblock %}