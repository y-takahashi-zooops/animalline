		<section class="secMV">
			<div class="slider-wrap">
				<div class="swiper js-sliderMV secMV-slider">
					<div class="swiper-wrapper">
						<div class="swiper-slide"><img src="{{ asset('assets/img/ec/mv_01.jpg') }}" alt=""></div>
