		</section>


		<section class="secBanner">
			<div class="secBanner__list flex break">
				<a href="{{ url('ec_nutro') }}" class="secBanner__item -w100">
					<img src="{{ asset('assets/img/ec/banner_nutro.png') }}" alt="ニュートロ">
				</a>
				<a href="{{ url('ec_greenies') }}" class="secBanner__item -w100">
					<img src="{{ asset('assets/img/ec/banner_greenies.jpg') }}" alt="グリニーズ">
				</a>
			</div>
		</section>

		<section class="secRecommend">
			<h2 class="pageHead">おすすめ商品</h2>
			<div class="slider-wrap">
				<div class="swiper js-sliderProduct" data-slider-id="3" data-slides-per-view="4" data-slides-per-view_sp="2">
					<div class="swiper-wrapper">
						{% for product in osusume %}
							<div class="swiper-slide">
								<a href="{{ url('product_detail', {'id': product.id}) }}" class="productItem flex vert">
									<div class="productItem__img">
										<img src="{{ asset(product.main_list_image|no_image_product, 'save_image') }}" alt="{{ product.name }}">
									</div>
									<div class="productItem__ttl">
										{{ product.name }}
									</div>
									<div class="productItem__more flex vcenter">
										{% if product.hasProductClass -%}
											{% if product.getPrice02IncTaxMin == product.getPrice02IncTaxMax %}
												<span class="productItem__price serif">{{ product.getPrice02IncTaxMin|price }} {{ '(税込)'|trans }}</span>
											{% else %}
												<span class="productItem__price serif">{{ product.getPrice02IncTaxMin|price }}
										～
										{{ product.getPrice02IncTaxMax|price }} {{ '(税込)'|trans }}</span>
											{% endif %}
										{% else %}
											<span class="productItem__price serif">{{ product.getPrice02IncTaxMin|price }} {{ '(税込)'|trans }}</span>
										{% endif %}
									</div>
								</a>
							</div>
						{% endfor %}

					</div>
				</div>
				<div class="swiper-button-prev productBtn productBtn-left pc" data-slider-id="3">
					<img src="{{ asset('assets/img/ec/arrow_left.svg') }}" alt="前へ">
				</div>
				<div class="swiper-button-next productBtn productBtn-right pc" data-slider-id="3">
					<img src="{{ asset('assets/img/ec/arrow_right.svg') }}" alt="次へ">
				</div>
			</div>
			<div class="secRecommend__btn flex hcenter">
				<a href="{{ url('product_list', {'category_id': 49}) }}" class="pageBtn flex vcenter hcenter">
					一覧を見る<i class="icon icon-triangle"></i>
				</a>
			</div>
		</section>

		<section class="secProductNew">
