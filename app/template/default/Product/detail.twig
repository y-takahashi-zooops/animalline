{% extends 'default_frame.twig' %}

{% set body_class = 'product_page' %}

{% block stylesheet %}
    <style>

        .slick-slider {
            margin-bottom: 30px;
        }

        .slick-dots {
            position: absolute;
            bottom: -45px;
            display: block;
            width: 100%;
            padding: 0;
            list-style: none;
            text-align: center;
        }

        .slick-dots li {
            position: relative;
            display: inline-block;
            width: 20px;
            height: 20px;
            margin: 0 5px;
            padding: 0;

            cursor: pointer;
        }

        .slick-dots li button {
            font-size: 0;
            line-height: 0;
            display: block;
            width: 20px;
            height: 20px;
            padding: 5px;
            cursor: pointer;
            color: transparent;
            border: 0;
            outline: none;
            background: transparent;
        }

        .slick-dots li button:hover,
        .slick-dots li button:focus {
            outline: none;
        }

        .slick-dots li button:hover:before,
        .slick-dots li button:focus:before {
            opacity: 1;
        }

        .slick-dots li button:before {
            content: " ";
            line-height: 20px;
            position: absolute;
            top: 0;
            left: 0;
            width: 12px;
            height: 12px;
            text-align: center;
            opacity: .25;
            background-color: black;
            border-radius: 50%;

        }

        .slick-dots li.slick-active button:before {
            opacity: .75;
            background-color: black;
        }

        .slick-dots li button.thumbnail img {
            width: 0;
            height: 0;
        }
    </style>
{% endblock %}

{% block javascript %}
	<script src="{{ asset('assets/js/vendor/translations.js') }}"></script>
	<script>

		function waitForElement(selector, callback, retries = 10) {
			const el = document.querySelector(selector);
			if (el) {
				callback(el);
			} else if (retries > 0) {
				setTimeout(() => waitForElement(selector, callback, retries - 1), 100);
			} else {
				console.warn('Element not found:', selector);
			}
		}

		function waitForTranslator(callback, retries = 10) {
			if (typeof Translator !== 'undefined') {
				callback();
			} else if (retries > 0) {
				setTimeout(() => waitForTranslator(callback, retries - 1), 100);
			} else {
				console.warn("Translator is not loaded yet.");
				callback(); // fallback 実行
			}
		}

		document.addEventListener('DOMContentLoaded', function () {
			waitForElement('#form1', function (formElement) {
				waitForTranslator(function () {
					try {
						eccube.classCategories = {{ class_categories_json|raw }};
						
						// セレクト描画
						const $form = $(formElement);
						const product_id = $form.find('input[name="product_id"], input[name="add_cart[product_id]"]').val();
						const $sele1 = $form.find('select[name="classcategory_id1"], select[name="add_cart[classcategory_id1]"]');
						const $sele2 = $form.find('select[name="classcategory_id2"], select[name="add_cart[classcategory_id2]"]');

						// 翻訳キーを翻訳済みに差し替え
						for (const key1 in eccube.classCategories) {
							for (const key2 in eccube.classCategories[key1]) {
								let item = eccube.classCategories[key1][key2];
								if (typeof item.name === 'string' && item.name.startsWith('trans:')) {
									const transKey = item.name.replace(/^trans:/, '');
									item.name = Translator.trans(transKey);
								}
							}
						}

						function fnSetClassCategories() {
							eccube.setClassCategories($form, product_id, $sele1, $sele2);

							// 商品規格が確定したあと、ProductClass にセット
							const selectedId1 = $sele1.val();
							const selectedId2 = $sele2.length ? $sele2.val() : '';
							const productClass = eccube.classCategories?.[selectedId1]?.[selectedId2];

							console.log(productClass)
							console.log('selectedId1:', selectedId1);
							console.log('selectedId2:', selectedId2);
							console.log('classCategories:', eccube.classCategories);

							if (productClass && productClass.product_class_id) {
								console.log('設定したproduct_class_id:', productClass?.product_class_id);
								$form.find('[name="add_cart[product_class]"]').val(productClass.product_class_id);
								return true;
							} else {
								console.warn('ProductClassが見つかりません');
								$form.find('[name="add_cart[product_class]"]').val('');
								return false;
							}
						}

						$sele1.on('change', fnSetClassCategories);
                		$sele2.on('change', fnSetClassCategories);

						$form.on('submit', function (e) {
							e.preventDefault(); // 送信を止める

							const success = fnSetClassCategories();
							if (!success) {
								alert('商品規格が選択されていません');
								return;
							}

							$.post($form.attr('action'), $form.serialize())
								.done(function (response) {
									try {
										const json = typeof response === 'string' ? JSON.parse(response) : response;
										if (json.done) {
											$('.ec-modal').fadeIn();
										} else if (json.messages) {
											alert(json.messages.join('\n'));
										} else {
											alert('カート追加に失敗しました');
										}
									} catch (e) {
										console.error("パースエラー:", e);
										alert('カート処理中にエラーが発生しました');
									}
								})
								.fail(function () {
									alert('通信エラーが発生しました');
								});
						});

						// 初期表示時に一度実行
						fnSetClassCategories();

						{% if form.classcategory_id2 is defined %}
							fnSetClassCategories({{ form.classcategory_id2.vars.value|json_encode|raw }});
						{% elseif form.classcategory_id1 is defined %}
							eccube.checkStock($form, {{ Product.id }}, {{ form.classcategory_id1.vars.value|json_encode|raw }}, null);
						{% else %}
							fnSetClassCategories('');
						{% endif %}

					} catch (e) {
						console.error("Error setting classCategories:", e);
					}
				});
			});
		});
	</script>

    {{ parent() }}
{% endblock %}

{% block main %}
