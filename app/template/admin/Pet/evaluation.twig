{% extends '@admin/default_frame.twig' %}

{% set menus = ['pets', 'pet_list'] %}
{% set params = app.request.query.all %}

{% set column = params.field is defined ? params.field : 'create_date' %}
{% set ordering = params.direction is defined ? params.direction : 'DESC' %}

{% block title %}{{ '評価確認'|trans }}{% endblock %}
{% block sub_title %}{{ 'ペット管理'|trans }}{% endblock %}

{# {% form_theme searchForm '@admin/Form/bootstrap_4_layout.html.twig' %} #}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/tempusdominus-bootstrap-4.min.css', 'admin') }}">
    <style>
        .fas.fa-star, .far.fa-star {
            color: #f8ce0b;
        }
    </style>
{% endblock stylesheet %}

{% block javascript %}
{% endblock javascript %}

{% block main %}
<div class="c-contentsArea__cols">
<div class="c-contentsArea__primaryCol">
    <div class="c-primaryCol">
        <div class="card rounded border-0 mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-3">
                        <div class="d-inline-block">
                            <label class="ec-label required" for="breeders_breeder_name">評価</label>
                        </div>
                    </div>
                    <div class="col-9 mb-2">
                        <i class="{{ evaluation.EvaluationValue == 0 ? 'far fa-star' :  'fas fa-star' }}"></i>
                        <!-- 2 star  -->
                        <i class="{{ evaluation.EvaluationValue >= 2 ? 'fas fa-star' : 'far fa-star' }}"></i>
                        <!-- 3 star  -->
                        <i class="{{ evaluation.EvaluationValue >= 3 ? 'fas fa-star' : 'far fa-star' }}"></i>
                        <!-- 4 star  -->
                        <i class="{{ evaluation.EvaluationValue >= 4 ? 'fas fa-star' : 'far fa-star' }}"></i>
                        <!-- 5 star  -->
                        <i class="{{ evaluation.EvaluationValue >= 5 ? 'fas fa-star' : 'far fa-star' }}"></i>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <div class="d-inline-block">
                            <label class="ec-label required" for="breeders_breeder_kana">メッセージ</label>
                        </div>
                    </div>
                    <div class="col-9 mb-2">
                        <span>{{ evaluation.EvaluationMessage|nl2br }}</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <div class="d-inline-block">
                            <label class="ec-label required" for="breeders_handling_pet_kind">画像</label>
                        </div>
                    </div>
                    <div class="col-9 mb-2">
                        <img src="{{ evaluation.ImagePath }}"> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}