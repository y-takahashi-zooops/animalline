<div class="c-contentsArea__cols">
    <div class="c-contentsArea__primaryCol">
        <div class="c-primaryCol">
            <div class="card rounded border-0 mb-4">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6">
                            <div class="d-inline-block">
                                    <span class="card-title">
                                        {{ title|trans }}
                                    </span>
                            </div>
                        </div>
                        <div class="col-6 text-right">
                            <a data-toggle="collapse" href="#house{{ title == '犬舎情報' ? 'Dog' : 'Cat' }}"
                               aria-expanded="false"
                               aria-controls="house{{ title == '犬舎情報' ? 'Dog' : 'Cat' }}">
                                <i class="fa fa-angle-up fa-lg"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="collapse show ec-cardCollapse" id="house{{ title == '犬舎情報' ? 'Dog' : 'Cat' }}">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <div class="d-inline-block">
                                    <span>運営者氏名</span>
                                </div>
                            </div>
                            <div class="col-6 mb-2">
                                <div class="ec-halfInput{{ has_errors(form.conservation_house_name) ? ' error' }}">
                                    {{ form_widget(form.conservation_house_name) }}
                                    {{ form_errors(form.conservation_house_name) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="d-inline-block">
                                    <span>運営者氏名カナ</span>
                                </div>
                            </div>
                            <div class="col-6 mb-2">
                                <div class="ec-halfInput{{ has_errors(form.conservation_house_kana) ? ' error' }}">
                                    {{ form_widget(form.conservation_house_kana) }}
                                    {{ form_errors(form.conservation_house_kana) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="d-inline-block">
                                    <span>郵便番号</span>
                                </div>
                            </div>
                            <div class="col-2 mb-2">
                                <div class="ec-zipInput{{ has_errors(form.conservation_house_house_zip) ? ' error' }}">
                                    {{ form_widget(form.conservation_house_house_zip) }}
                                    {{ form_errors(form.conservation_house_house_zip) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="d-inline-block">
                                    <span>都道府県</span>
                                </div>
                            </div>
                            <div class="col-2 mb-2">
                                <div class="ec-select{{ has_errors(form.address.pref) ? ' error' }}">
                                    {{ form_widget(form.address.pref) }}
                                    {{ form_errors(form.address.pref) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="d-inline-block">
                                    <span>市区町村</span>
                                </div>
                            </div>
                            <div class="col-2 mb-2">
                                <div class="ec-input{{ has_errors(form.address.conservation_house_city) ? ' error' }}">
                                    {{ form_widget(form.address.conservation_house_city) }}
                                    {{ form_errors(form.address.conservation_house_city) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="d-inline-block">
                                    <span>市区町村以下住所</span>
                                </div>
                            </div>
                            <div class="col-6 mb-2">
                                <div class="ec-input{{ has_errors(form.address.conservation_house_address) ? ' error' }}">
                                    {{ form_widget(form.address.conservation_house_address) }}
                                    {{ form_errors(form.address.conservation_house_address) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="d-inline-block">
                                    <span>電話番号</span>
                                </div>
                            </div>
                            <div class="col-2 mb-2">
                                <div class="ec-halfInput{{ has_errors(form.conservation_house_house_tel) ? ' error' }}">
                                    {{ form_widget(form.conservation_house_house_tel) }}
                                    {{ form_errors(form.conservation_house_house_tel) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="d-inline-block">
                                    <span>FAX番号</span>
                                </div>
                            </div>
                            <div class="col-2 mb-2">
                                <div class="ec-halfInput{{ has_errors(form.conservation_house_house_fax) ? ' error' }}">
                                    {{ form_widget(form.conservation_house_house_fax) }}
                                    {{ form_errors(form.conservation_house_house_fax) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-3">
                                <div class="d-inline-block">
                                    <span>担当者名</span>
                                </div>
                            </div>
                            <div class="col-6 mb-2">
                                <div class="ec-halfInput{{ has_errors(form.conservation_house_front_name) ? ' error' }}">
                                    {{ form_widget(form.conservation_house_front_name) }}
                                    {{ form_errors(form.conservation_house_front_name) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="d-inline-block">
                                    <span>担当者TEL</span>
                                </div>
                            </div>
                            <div class="col-2 mb-2">
                                <div class="ec-halfInput{{ has_errors(form.conservation_house_front_tel) ? ' error' }}">
                                    {{ form_widget(form.conservation_house_front_tel) }}
                                    {{ form_errors(form.conservation_house_front_tel) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>