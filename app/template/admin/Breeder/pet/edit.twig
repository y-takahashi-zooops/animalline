{% extends '@admin/default_frame.twig' %}

{% set menus = ['breeders', 'breeders_breeder_list'] %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}{{ 'ペット情報編集'|trans }}{% endblock %}
{% block sub_title %}{{ 'ブリーダー管理'|trans }}{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/tempusdominus-bootstrap-4.min.css', 'admin') }}">

    <!-- select2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css"
        integrity="sha256-FdatTf20PQr/rWg+cAKfl6j4/IY3oohFAJ7gVC3M34E=" crossorigin="anonymous">
    <!-- select2-bootstrap4-theme -->
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/@ttskch/select2-bootstrap4-theme/dist/select2-bootstrap4.min.css">
{% endblock stylesheet %}

{% block javascript %}
<!-- select2 -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"
    integrity="sha256-AFAYEOkzB6iIKnTYZOdUf9FFje6lOTYdwRJKwTN5mks=" crossorigin="anonymous"></script>

<script>
    $("#pedigreeSelect").hide();
    if(breeder_pets_is_pedigree_0.checked){ 
        $("#pedigreeSelect").show();
    }
    $(document).ready(function() {
        $("#breeds_type").select2({
            theme: 'bootstrap4',
            language: {
                "noResults": function () {
                    return "結果が見つかりません。";
                }
            }
        });

        $("input[name$='breeder_pets[is_pedigree]']").click(function() {
            var is_pedigree = $(this).val();
            if (is_pedigree == 1) {
                $("#pedigreeSelect").show();
            } else if (is_pedigree == 0) {
                $("#pedigreeSelect").hide();
            }
        });
    });
        $("#edit-submit").click(function() {
            $("#path-get-all").val(localStorage.url);
        });
</script>
{% endblock javascript %}

{% block main %}
    {{ form_start(form) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-6">
                                    <div class="d-inline-block">
                                    <span class="card-title">
                                        {{ 'ペット情報'|trans }}
                                    </span>
                                    </div>
                                </div>
                                <div class="col-6 text-right">
                                    <a data-bs-toggle="collapse" href="#basicConfig" aria-expanded="false"
                                        aria-controls="basicConfig">
                                        <i class="fa fa-angle-up fa-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="collapse show ec-cardCollapse" id="basicConfig">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>ペット種別</span>
                                            <span class="badge badge-primary ml-1">
                                                {{ 'admin.common.required'|trans }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-2 mb-2">
                                        <span class="form-control">{{ form.pet_kind.vars.value == constant('Customize\\Config\\AnilineConf::ANILINE_PET_KIND_DOG') ? '犬' : '猫' }}</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>犬/猫種</span>
                                            <span class="badge badge-primary ml-1">
                                                {{ 'admin.common.required'|trans }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-4 mb-2">
                                        <select id="breeds_type" name="breeds_type" class="form-control">
                                            {% for breed in breeds %}
                                                <option {{ breederPet.breedsType and breederPet.breedsType.id == breed.id ? 'selected' : '' }} value="{{ breed.id }}">{{ breed.breedsName }}</option>
                                            {% endfor %}
                                        </select>        
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block" >
                                            <span>画像</span>
                                        </div>
                                    </div>
                                    <div class="col-6 mb-2">
                                        {% for image in images %}
                                            <img alt="breeder_pet_image"
                                                src="{{ app.request.schemeAndHttpHost ~ '/' ~ constant('Customize\\Config\\AnilineConf::ANILINE_IMAGE_URL_BASE') ~ (image.imageUri | default('/noimage_plugin_list.png')) }}"
                                                style="max-width: 65px" class="mr-2">
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>性別</span>
                                            <span class="badge badge-primary ml-1">
                                                {{ 'admin.common.required'|trans }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-2 mb-2">
                                        {{ form_widget(form.pet_sex) }}
                                        {{ form_errors(form.pet_sex) }}     
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>誕生日</span>
                                            <span class="badge badge-primary ml-1">
                                                {{ 'admin.common.required'|trans }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col mb-2 date">
                                        {{ form_widget(form.pet_birthday.year) }}&nbsp;/&nbsp;
                                        {{ form_widget(form.pet_birthday.month) }}&nbsp;/&nbsp;
                                        {{ form_widget(form.pet_birthday.day) }}
                                        {{ form_errors(form.pet_birthday) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>バンドカラー</span>
                                            <span class="badge badge-primary ml-1">
                                                {{ 'admin.common.required'|trans }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-2 mb-2">
                                        {{ form_widget(form.band_color) }}
                                        {{ form_errors(form.band_color) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>毛色</span>
                                            <span class="badge badge-primary ml-1">
                                                {{ 'admin.common.required'|trans }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-2 mb-2">
                                        {{ form_widget(form.coat_color) }}
                                        {{ form_errors(form.coat_color) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>成犬/猫時予想体重</span>
                                            <span class="badge badge-primary ml-1">
                                                {{ 'admin.common.required'|trans }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-2 mb-2">
                                        {{ form_widget(form.future_wait) }}
                                        {{ form_errors(form.future_wait) }}  
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>遺伝子調査結果</span>
                                            <span class="badge badge-primary ml-1">
                                                {{ 'admin.common.required'|trans }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-2 mb-2">
                                        {{ form_widget(form.dna_check_result) }}
                                        {{ form_errors(form.dna_check_result) }}        
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>アピールポイント</span>
                                        </div>
                                    </div>
                                    <div class="col-6 mb-2">
