{% extends '@admin/default_frame.twig' %}

{% set params = app.request.query.all %}
{% set column = params.field is defined ? params.field : 'create_date' %}
{% set ordering = params.direction is defined ? params.direction : 'DESC' %}

{% set menus = ['breeders', 'breeders_breeder_list'] %}

{% block title %}{{ 'ブリーダー一覧'|trans }}{% endblock %}
{% block sub_title %}{{ 'ブリーダー管理'|trans }}{% endblock %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ asset('assets/css/tempusdominus-bootstrap-4.min.css', 'admin') }}">
{% endblock stylesheet %}

{% block javascript %}
<script>

</script>
{% endblock javascript %}

{% block main %}
<div class="c-outsideBlock">
    <form id='search_form' method="get" action="{{ url('admin_breeder_list') }}">
        <div class="c-outsideBlock__contents">
            <div class="row mb-2">
                <div class="col">
                    <label class="col-form-label" data-tooltip="true" data-placement="top"
                        title="情報を入力して一覧の絞り込み検索ができます。">ブリーダー名<i class="fa fa-question-circle fa-lg ml-1"></i></label>
                    <input type="text" id="breeder_name" name="breeder_name" class="form-control"
                        value="{{ params.breeder_name is defined ? params.breeder_name : '' }}" />
                </div>
                <div class="col">
                    <label class="col-form-label">登録日</label>
                    <div class="form-row align-items-center">
                        <div class="col">
                            <input type="date" id="create_date_from" name="create_date_from" class="form-control"
                                value="{{ params.create_date_from is defined ? params.create_date_from : '' }}" />
                        </div>
                        <div class="col-auto text-center">〜</div>
                        <div class="col">
                            <input type="date" id="create_date_to" name="create_date_to" class="form-control"
                                value="{{ params.create_date_to is defined ? params.create_date_to : '' }}" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <label class="col-form-label">審査状態</label>
                    <select id="examination_status" name="examination_status" class="form-control">
                        {% set statusNames = ['全て', '審査済み', '未審査'] %}
                        {% for i in 1..3 %}
                        <option value="{{ i }}" {% if params.examination_status is defined and
                            params.examination_status==i %} selected {% endif %}>{{ statusNames[i - 1] }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col">
                    <label class="col-form-label">更新日</label>
                    <div class="form-row align-items-center">
                        <div class="col">
                            <input type="date" id="update_date_from" name="update_date_from" class="form-control"
                                value="{{ params.update_date_from is defined ? params.update_date_from : '' }}" />
                        </div>
                        <div class="col-auto text-center">〜</div>
                        <div class="col">
                           <input type="date" id="update_date_to" name="update_date_to" class="form-control"
                                value="{{ params.update_date_to is defined ? params.update_date_to : '' }}" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="c-outsideBlock__contents mb-5">
            <button class="btn btn-ec-conversion px-5" type="submit">{{ 'admin.common.search'|trans }}</button>
        </div>
    </form>
</div>
<div style="text-align:right;margin:20px">
<a href="{{ url("admin_breeder_get_csvlist") }}">一覧CSVダウンロード</a>
</div>
<div class="c-contentsArea__cols">
    <div class="c-contentsArea__primaryCol">
        <div class="c-primaryCol">
            <div class="card rounded border-0 mb-4 d-block">
                <div class="card-body p-0">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th class="border-top-0 pt-2 pb-2"></th>
                                {# TODO:クリックで昇順ソート #}
                                <th class="border-top-0 pt-2 pb-2"><a
                                        class="{{ column == 'id' ? ordering == 'ASC' ? 'icon-up' : 'icon-down' }}"
                                        href="{{ url('admin_breeder_list', params|merge({'field': 'id', 'direction': direction})) }}">ID</a>
                                </th>
                                <th class="border-top-0 pt-2 pb-2">画像</th>
                                <th class="border-top-0 pt-2 pb-2"><a
                                        class="{{ column == 'breeder_name' ? ordering == 'ASC' ? 'icon-up' : 'icon-down' }}"
                                        href="{{ url('admin_breeder_list', params|merge({'field': 'breeder_name', 'direction': direction})) }}">ブリーダー名</a>
                                </th>
                                <th class="border-top-0 pt-2 pb-2"><a
                                        class="{{ column == 'create_date' ? ordering == 'ASC' ? 'icon-up' : 'icon-down' }}"
                                        href="{{ url('admin_breeder_list', params|merge({'field': 'create_date', 'direction': direction})) }}">登録日</a>
                                </th>
                                <th class="border-top-0 pt-2 pb-2"><a
                                        class="{{ column == 'update_date' ? ordering == 'ASC' ? 'icon-up' : 'icon-down' }}"
                                        href="{{ url('admin_breeder_list', params|merge({'field': 'update_date', 'direction': direction})) }}">更新日</a>
                                </th>
                                <th class="border-top-0 pt-2 pb-2"><a
                                        class="{{ column == 'examination_status' ? ordering == 'ASC' ? 'icon-up' : 'icon-down' }}"
                                        href="{{ url('admin_breeder_list', params|merge({'field': 'examination_status', 'direction': direction})) }}">ステータス</a>
                                </th>
                                <th class="border-top-0 pt-2 pb-2"><a
                                        class="{{ column == 'id_hash' ? ordering == 'ASC' ? 'icon-up' : 'icon-down' }}"
                                        href="{{ url('admin_breeder_list', params|merge({'field': 'examination_status', 'direction': direction})) }}">連携用キー</a>
                                </th>
                                <th class="border-top-0 pt-2 pb-2 pr-3" colspan="3"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for breeder in breeders %}
                            <tr id="ex-adoption-1">
                                <td class="align-middle"></td>
                                <td class="align-middle">{{ breeder.Id }}</td>
                                <td class="align-middle">
                                    <img alt="..."
                                        src="{{ app.request.schemeAndHttpHost ~ (breeder.thumbnailPath | default | length > 0 ? breeder.thumbnailPath : '/' ~ constant('Customize\\Config\\AnilineConf::ANILINE_IMAGE_URL_BASE') ~ '/noimage_plugin_list.png') }}"
                                        style="max-width: 100px">
                                </td>
                                <td class="align-middle">{{ breeder.breederName }}</td>
                                <td class="align-middle">{{ breeder.createDate|date('Y/m/d H:i') }}</td>
                                <td class="align-middle">{{ breeder.updateDate|date('Y/m/d H:i') }}</td>
                                <td class="align-middle">
                                    {{ breederstatus[breeder.ExaminationStatus] }}
                                </td>
                                <td class="align-middle">
                                    {{ breeder.IdHash }}
                                </td>
                                <td class="align-middle pr-3" colspan="3">
                                    <div class="text-right">
                                        <div class="px-1 d-inline-block text-center" data-tooltip="true"
                                            data-placement="top" title="ペット情報登録">
                                            <a class="btn btn-ec-actionIcon"
                                                href="{{ url('breeder_pets_new', {'breeder_id': breeder.Id,}) }}" target="_blank">
                                                <i class="fa fa-paw fa-lg text-secondary" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                        <div class="px-1 d-inline-block text-center" data-tooltip="true"
                                            data-placement="top" title="登録内容編集">
                                            <a class="btn btn-ec-actionIcon"
                                                href="{{ url('admin_breeder_edit', {'id': breeder.Id}) }}">
                                                <i class="fa fa-edit fa-lg text-secondary" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                        <div class="px-1 d-inline-block text-center" data-tooltip="true"
                                            data-placement="top" title="犬舎・猫舎情報編集">
                                            <a class="btn btn-ec-actionIcon" {% if breeder.getBreederHouses().count() %}
                                                href="{{ url('admin_breeder_house', {'id': breeder.Id}) }}" {% else %}
                                                disabled {% endif %}>
                                                <i class="fa fa-home fa-lg text-secondary" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                        <div class="px-1 d-inline-block text-center" data-tooltip="true"
                                            data-placement="top" title="審査情報表示">
                                            <a class="btn btn-ec-actionIcon" {% if
                                                breeder.getBreederExaminationInfos().count() %}
                                                href="{{ url('admin_breeder_examination', {'id': breeder.Id}) }}" {%
                                                else %} disabled {% endif %}>
                                                <i class="fa fa-file fa-lg text-secondary" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                        <div class="px-1 d-inline-block text-center" data-tooltip="true" data-placement="top" title="振込先口座照会">
                                            <a class="btn btn-ec-actionIcon" {% if breeder.bankAccounts.count %}
                                                href="{{ url('admin_breeder_bank_account', {'id': breeder.bankAccounts[0].id}) }}" {% else %} disabled {% endif %}>
                                                <i class="fas fa-landmark fa-lg text-secondary" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                        <div class="px-1 d-inline-block text-center" data-tooltip="true" data-placement="top" title="検査キット請求">
                                            <a class="btn btn-ec-actionIcon" href="#"
                                                {% if breeder.IsActive == 1 %} onClick='window.open("{{ url('breeder_examination_kit_new', {'breeder_id': breeder.id}) }}")' {% else %} disabled {% endif %}>
                                                <i class="fas fa-regular fa-vial text-secondary" aria-hidden="true"></i>
                                            </a>
                                        </div>

                                        <div class="px-1 d-inline-block text-center" data-tooltip="true" data-placement="top" title="問い合わせ確認">
                                            <a class="btn btn-ec-actionIcon" href="#"
                                                {% if breeder.IsActive == 1 %} onClick='window.open("{{ url('nopet_user_all_message', {'breeder_id': breeder.id}) }}")' {% else %} disabled {% endif %}>
                                                <i class="fas fa-regular fa-envelope text-secondary" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="7">結果が０件です。</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="navigation float-right">
                {{ knp_pagination_render(breeders, '@KnpPaginator/twitter_bootstrap_v4_pagination.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
