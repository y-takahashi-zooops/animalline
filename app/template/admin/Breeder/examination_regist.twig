{% extends '@admin/default_frame.twig' %}

{% set menus = ['breeders', 'breeders_breeder_list'] %}

{% block title %}{{ '審査結果登録'|trans }}{% endblock %}
{% block sub_title %}{{ 'ブリーダー管理'|trans }}{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/tempusdominus-bootstrap-4.min.css', 'admin') }}">
{% endblock stylesheet %}

{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $('#examination_result').change(function () {
        result = document.getElementById('examination_result').value

        if( result ==  1){
            $('#mailarea').attr('disabled', true);
        } else {
            $('#mailarea').attr('disabled', false);
        }
    });

    document.getElementById("submit").onclick = function() {
    $('#modal').modal('show');
    };

    document.getElementById("confirm-yes").onclick = function() {
    $('#modal').modal('hide');
    };
</script>

{% endblock javascript %}

{% block main %}
<form name="form1" role="form" class="form-horizontal" id="form1" method="post" action="">
{# {{ form_widget(form._token) }} #}
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="card rounded border-0 mb-4">
                    <div class="card-header"><span class="card-title">審査結果編集</span></div>
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-2">
                                <span>審査結果</span>
                            </div>
                            <div class="col-2 ec-select">
                                <select id="examination_result" name="" class="form-control">
                                    <option value="1">許可</option>
                                    <option value="2">拒否</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-2">
                                <span>メール本文</span>
                                <span class="badge badge-primary ml-1">{{ 'admin.common.required'|trans }}</span>
                            </div>
                            <div class="col-10">
                                <textarea id="mailarea" name="" class="form-control" rows="15" disabled>審査に関する情報のお問い合わせにはお答えできません</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="c-conversionArea" id="aside_column">
        <div class="c-conversionArea__container">
            <div class="row justify-content-between align-items-center">
                <div class="col-6">
                    <div class="c-conversionArea__leftBlockItem">
                        <a class="c-baseLink" href='{{path('admin_breeder_examination',{'id': 1})}}'>
                            <i class="fa fa-backward" aria-hidden="true"></i><span>審査情報表示</span>
                        </a>
                    </div>
                </div>
                <div class="col-6">
                    <div id="ex-conversion-action" class="row align-items-center justify-content-end">
                        <div class="col-auto">
                            <button class="btn btn-ec-conversion px-5" id="submit" type="button">{{ 'admin.common.confirm'|trans }}</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
{{ include('animalline/components/_modal_mail_confirm.twig') }}
{% endblock %}



