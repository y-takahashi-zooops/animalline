{% extends '@admin/default_frame.twig' %}

{% set menus = ['product', 'waste'] %}

{% block title %}廃棄情報登録{% endblock %}
{% block sub_title %}{{ 'admin.product.product_management'|trans }}{% endblock %}

{% block javascript %}{% endblock %}

{% block stylesheet %}{% endblock %}

{% block main %}
    <form role="form" name="form1" id="form1" method="post" action="" novalidate enctype="multipart/form-data">
        {{ form_widget(form._token) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8">
                                    <div class="d-inline-block">
                                        <span class="card-title">廃棄情報</span>
                                    </div>
                                </div>
                                <div class="col-4 text-right">
                                    <a data-bs-toggle="collapse" href="#basicConfig" aria-expanded="false"
                                       aria-controls="basicConfig">
                                        <i class="fa fa-angle-up fa-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="collapse show ec-cardCollapse" id="basicConfig">
                            <div class="card-body">
                                    <div class="row">
                                        <div class="col-3">
                                            <div class="d-inline-block" data-tooltip="true" data-placement="top" title="{{ 'tooltip.product.product_id'|trans }}">
                                                <span>{{ 'admin.product.product_id'|trans }}</span>
                                                <i class="fa fa-question-circle fa-lg ml-1"></i>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <p>{{ product ? product.id : '' }}</p>
                                        </div>
                                    </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>{{ 'admin.product.name'|trans }}</span>
                                        </div>
                                    </div>
                                    <div class="col mb-2">
                                        <p>{{ product ? product.name : '' }}</p>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>廃棄日</span>
                                    </div>
                                    <div class="col">
                                        <div class="form-inline">
                                            {{ form_widget(form.waste_date.year) }}<span>&nbsp;/&nbsp;</span>
                                            {{ form_widget(form.waste_date.month) }}<span>&nbsp;/&nbsp;</span>
                                            {{ form_widget(form.waste_date.day) }}
                                            {{ form_errors(form.waste_date) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>廃棄数量</span>
                                    </div>
                                    <div class="col-3">
                                        <div>
                                            {{ form_widget(form.waste_unit) }}
                                            {{ form_errors(form.waste_unit) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>廃棄理由</span>
                                    </div>
                                    <div class="col">
                                        <div>
                                            {{ form_widget(form.stock_waste_reason) }}
                                            {{ form_errors(form.stock_waste_reason) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>備考</span>
                                    </div>
                                    <div class="col">
                                        <div>
                                            {{ form_widget(form.comment) }}
                                            {{ form_errors(form.comment) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-baseLink" href="{{url('admin_product_waste')}}">
                                <i class="fa fa-backward" aria-hidden="true"></i><span>廃棄管理</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div id="ex-conversion-action" class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5" type="submit">{{ 'admin.common.registration'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
