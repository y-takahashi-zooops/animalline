{% extends '@admin/default_frame.twig' %}

{% set menus = ['product', 'product_edit'] %}
{% set params = app.request.query.all %}

{% block title %}セット商品管理{% endblock %}
{% block sub_title %}{{ 'admin.product.product_management'|trans }}{% endblock %}

{% block javascript %}
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.core.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.widget.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.mouse.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.sortable.min.js', 'admin') }}"></script>

    <script>
        localStorage.setItem("index", {{ count }});
        $(function(){
            $('#search').on('click', function () {
            var list = $('#searchProductModalList');
            list.children().remove();
            $.ajax({
                url: "{{ url('admin_product_set_search_product') }}",
                    type: 'POST',
                    dataType: 'html',
                    data: {
                        'id': $('#admin_search_product_id').val(),
                        'category_id': $('#admin_search_product_category_id').val(),
                        'reIndex': true
                    }
                }).done(function (data) {
                    $('#searchProductModalList').html(data);
                }).fail(function (data) {
                    alert('search product failed.');
                });
            });

            $(document).on('click', '#searchProductModalList ul.pagination li.page-item a.page-link', function (e) {
                e.preventDefault();
                var list = $('#searchProductModalList');
                list.children().remove();
                var url = $(this).attr('href');
                $.ajax({
                    url: url,
                    type: 'GET',
                    dataType: 'html'
                }).done(function (data) {
                    $('#searchProductModalList').html(data);
                }).fail(function (data) {
                    alert('search product failed.');
                });
            });

            $collectionHolder = $('#table-form-field');
            formIdPrefix = '#product_set_ProductSet_';

            $(document).on('click', '.delete', function (e) {
                $(this).parents('tr').remove();
                $('#form1').submit();
            });
        });
    </script>
{% endblock %}

{% block stylesheet %}{% endblock %}

{% block main %}
    <form role="form" name="form1" id="form1" method="post" action="" novalidate enctype="multipart/form-data">
        {{ form_widget(form._token) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8">
                                    <div class="d-inline-block">
                                    <span class="card-title">
                                        {{ 'admin.product.product__card_title'|trans }}
                                    </span>
                                    </div>
                                </div>
                                <div class="col-4 text-right">
                                    <a data-bs-toggle="collapse" href="#basicConfig" aria-expanded="false"
                                       aria-controls="basicConfig">
                                        <i class="fa fa-angle-up fa-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="collapse show ec-cardCollapse" id="basicConfig">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block" data-tooltip="true" data-placement="top"
                                             title="{{ 'tooltip.product.product_id'|trans }}">
                                            <span>{{ 'admin.product.product_id'|trans }}</span>
                                            <i class="fa fa-question-circle fa-lg ml-1"></i>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <p>{{ Product.id }}</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>{{ 'admin.product.name'|trans }}</span>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <p>{{ Product.name }}</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>{{ 'admin.product.price'|trans }}</span>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <p>{{ ProductClass.price02 }}円</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>{{ 'admin.product.product_code'|trans }}</span>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <p>{{ ProductClass.code }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card rounded border-0 mb-4">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-8">
                                <div class="d-inline-block"><span class="card-title">セット商品情報</span></div>
                            </div>
                            <div class="col-4 text-right">
                                <a data-bs-toggle="collapse" href="#productSet" aria-expanded="false"
                                   aria-controls="productSet">
                                    <i class="fa fa-angle-up fa-lg"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="collapse show ec-cardCollapse" id="productSet">
                        <div class="card-body">
                            <div class="row justify-content-between mb-2">
                                <div class="col-6">
                                    <a class="btn btn-ec-regular mr-2 add" data-bs-toggle="modal"
                                        data-bs-target="#addProduct">商品を追加</a>
                                    <div class="modal fade" id="addProduct" tabindex="-1" role="dialog"
                                        aria-labelledby="addProduct" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">商品を追加</h5>
                                                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">×</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    {{ form_widget(searchProductModalForm.id, { attr : {'class': 'mb-3', 'placeholder': 'admin.product.multi_search_label' }}) }}
                                                    {{ form_widget(searchProductModalForm.category_id) }}
                                                    <button type="button" id="search" class="btn btn-ec-conversion px-5 mb-4 mt-2">検索</button>
                                                    <div id="searchProductModalList"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{ form_errors(form.ProductSetErrors) }}
                                </div>
                            </div>
                            {% set keys = form.ProductSet.vars.data|keys %}
                            {% set nextIndex = keys ? max(keys) + 1 : 0 %}
                            <table id="table-form-field" class="table table-striped table-sm mb-0"
                                data-next-index="{{ nextIndex }}"
                                data-prototype="{% filter escape %}{{ include('@admin/Order/product_set_prototype.twig', {'productSetForm': form.ProductSet.vars.prototype}) }}{% endfilter %}"
                            >
                                <thead class="table-active">
                                <tr class="text-nowrap">
                                    <th class="pt-2 pb-2 pl-3">商品ID</th>
                                    <th class="pt-2 pb-2 pl-3">商品名・商品コード</th>
                                    <th class="pt-2 pb-2">
                                        <div class="col-8">価格</div>
                                    </th>
                                    <th class="pt-2 pb-2">
                                        <div class="col-8">数量</div>
                                    </th>
                                    <th class="pt-2 pb-2 pr-3"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for key , productSetForm in form.ProductSet %}
                                    {% set productSet = productSetForm.vars.data %}
                                    <tr>
                                        {# hidden values #}
                                        {{ form_widget(productSetForm.ProductClass) }}

                                        <td class="align-middle">
                                            <div class="col-12 col-xl-8 text-center">
                                                {{ productSet.ProductClass.Product.id }}
                                            </div>
                                        </td>

                                        <td class="align-middle pl-3">
                                            <p class="mb-0 font-weight-bold">
                                                <a href="{{ url('admin_product_product_edit', {id: productSet.productClass.product.id}) }}" target="_blank">
                                                    {{ productSet.productClass.product.name }}
                                                </a>
                                            </p>
                                            <span>
                                            {{ productSet.productClass.code }}
                                            {% if productSet.productClass.classCategory1 is not empty %}
                                                <br>
                                                (
                                                {{ productSet.productClass.classCategory1.className.name }}：
                                                {{ productSet.productClass.classCategory1.name }}
                                                {% if productSet.productClass.classCategory2 is not empty %}
                                                    /
                                                    {{ productSet.productClass.classCategory2.className.name }}：
                                                    {{ productSet.productClass.classCategory2.name }}
                                                {% endif %}
                                                )
                                            {% endif %}
                                        </span>
                                            {{ form_errors(productSetForm.product_name) }}
                                        </td>

                                        <td class="align-middle">
                                            <div class="col mt-3">
                                                {# ポイント値引きは価格変更できない #}
                                                {{ form_widget(productSetForm.price, {'attr': { 'readonly': 'readonly', 'class': 'pointPrice' } }) }}
                                                <div class="text-right small">(税抜)</div>
                                                {{ form_errors(productSetForm.price) }}
                                            </div>
                                        </td>

                                        <td class="align-middle">
                                            <div class="col-12 col-xl-8">
                                                {# 複数配送の場合は商品の個数を変更できない、ポイントの場合も個数を変更できない #}
                                                {{ form_widget(productSetForm.quantity) }}
                                                {{ form_errors(productSetForm.quantity) }}
                                            </div>
                                        </td>

                                        <td class="align-middle text-right pr-3">
                                            <div class="row justify-content-end">
                                                <div class="col-auto text-center">
                                                    <div class="d-inline-block mr-3" data-tooltip="true"
                                                            data-placement="top"
                                                            title="{{ 'admin.common.delete'|trans }}">
                                                        <a class="btn btn-ec-actionIcon" data-bs-toggle="modal"
                                                            data-bs-target="#delete_{{ productSetForm.vars.id }}">
                                                            <i class="fa fa-close fa-lg text-secondary"
                                                                aria-hidden="true"></i>
                                                        </a>
                                                    </div>
                                                    <!-- 明細の削除確認モーダル -->
                                                    <div class="modal fade"
                                                            id="delete_{{ productSetForm.vars.id }}"
                                                            tabindex="-1" role="dialog"
                                                            aria-labelledby="delete_{{ productSetForm.vars.id }}"
                                                            aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title font-weight-bold">{{ 'admin.common.delete_modal__title'|trans }}</h5>
                                                                    <button class="close" type="button"
                                                                            data-dismiss="modal"
                                                                            aria-label="Close">
                                                                        <span aria-hidden="true">×</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body text-left">
                                                                    <p class="text-left">{{ 'admin.order.delete_item__confirm_message'|trans({ '%name%' : productSet.productClass.product.name }) }}</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button class="btn btn-ec-sub" type="button"
                                                                            data-dismiss="modal">{{ 'admin.common.cancel'|trans }}</button>
                                                                    <a href="#"
                                                                        class="btn delete btn-ec-delete">{{ 'admin.common.delete'|trans }}</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <hr class="mt-0">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-baseLink" href="{{ url('admin_product') }}">
                                <i class="fa fa-backward" aria-hidden="true"></i><span>商品一覧</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div id="ex-conversion-action" class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5" name="mode"
                                    value="register" type="submit">{{ 'admin.common.registration'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}